---
import Layout from '../../layouts/Layout.astro';
import Nav from '../../components/Nav.astro';
import CTA from '../../components/CTA.astro';
import Footer from '../../components/Footer.astro';
---

<Layout
  title="Bathroom Tiling — Rs. 500/sq.ft All Materials Included — TILERSHUB Sri Lanka"
  description="Professional bathroom tiling across Sri Lanka. Rs. 500 per sq.ft — all materials included except tiles. Tokyo Super HP adhesive, Swisstek grout, tile leveling system, and floor screed."
>
  <Nav />

  <!-- Page Hero -->
  <section class="page-hero">
    <div class="hero-inner">
      <div class="breadcrumb">
        <a href="/">Home</a>
        <span>›</span>
        <a href="/#services">Services</a>
        <span>›</span>
        <span>Bathroom Tiling</span>
      </div>
      <div class="hero-icon reveal">
        <svg viewBox="0 0 48 48" fill="none">
          <!-- wall tile grid -->
          <rect x="4"  y="4"  width="12" height="12" rx="1" fill="#c4784a" opacity=".85"/>
          <rect x="19" y="4"  width="12" height="12" rx="1" fill="#c4784a" opacity=".5"/>
          <rect x="34" y="4"  width="10" height="12" rx="1" fill="#c4784a" opacity=".3"/>
          <rect x="4"  y="19" width="12" height="12" rx="1" fill="#c4784a" opacity=".5"/>
          <rect x="19" y="19" width="12" height="12" rx="1" fill="#c4784a" opacity=".85"/>
          <rect x="34" y="19" width="10" height="12" rx="1" fill="#c4784a" opacity=".5"/>
          <!-- floor line -->
          <rect x="4"  y="36" width="40" height="8"  rx="1" fill="#c4784a" opacity=".18"/>
          <line x1="4" y1="36" x2="44" y2="36" stroke="#c4784a" stroke-width="1.5" opacity=".6"/>
        </svg>
      </div>
      <h1 class="reveal">Bathroom Tiling</h1>
      <p class="hero-desc reveal">
        Complete bathroom tiling for walls and floors — all materials supplied and
        installed. Bring your tiles; we handle everything else with precision-grade
        products and experienced craftsmanship.
      </p>
      <div class="price-tag reveal">
        <span class="p-amt">Rs. 500</span>
        <span class="p-unit">/ sq.ft &mdash; all materials included except tiles</span>
      </div>
      <div class="hero-cta reveal">
        <a href="https://wa.me/94774503744?text=Hello%2C%20I%20would%20like%20a%20bathroom%20tiling%20quote." class="btn-primary">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347z"/>
            <path d="M12 0C5.373 0 0 5.373 0 12c0 2.143.566 4.148 1.553 5.887L0 24l6.296-1.529A11.946 11.946 0 0012 24c6.627 0 12-5.373 12-12S18.627 0 12 0zm0 21.818a9.818 9.818 0 01-5.001-1.368l-.36-.213-3.733.906.946-3.643-.234-.374A9.818 9.818 0 1112 21.818z"/>
          </svg>
          Get a Quote
        </a>
        <a href="tel:+94774503744" class="btn-ghost">0774 503 744</a>
      </div>
    </div>
  </section>

  <!-- What's Included -->
  <section class="details-section">
    <div class="section-inner">
      <div class="col-content">
        <div class="stag">What's Covered</div>
        <h2>Everything in the<br />Rs. 500/sq.ft Rate</h2>
        <p class="sdesc">
          One transparent rate covers all labour, preparation, and materials
          for a complete professional installation. You supply the tiles — we handle the rest.
        </p>
        <ul class="include-list">
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Floor screed — sand & cement</strong>
              <span>Properly mixed sand and cement screed laid to achieve a flat, even base before tiling begins</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Tokyo Super HP Tile Adhesive</strong>
              <span>High-performance adhesive formulated for wet areas — strong bond on both wall and floor tiles</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Tile Leveling System</strong>
              <span>Every tile clipped and wedged — zero lippage, perfectly flat and plumb surface guaranteed</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Swisstek Tile Grout</strong>
              <span>Waterproof, stain-resistant grout applied with consistent colour and flush-finished joints</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Precision wet-saw cutting</strong>
              <span>Clean, accurate cuts around fittings, corners, and obstacles on walls and floors</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Layout planning & alignment</strong>
              <span>Walls and floor set out with centre lines and dry-run before any adhesive is applied</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Clean-up on completion</strong>
              <span>All grout haze, adhesive residue, and site waste removed before handover</span>
            </div>
          </li>
        </ul>
        <div class="not-included">
          <strong>Not included:</strong> Tiles (supplied by client), waterproofing membrane, fixtures and fittings.
          See our <a href="/services/waterproofing">Waterproofing</a> and <a href="/services/bathroom-renovation">Bathroom Renovation</a> pages if you need those too.
        </div>
      </div>
      <div class="col-aside">
        <div class="aside-card">
          <div class="aside-label">Rate</div>
          <div class="aside-value">Rs. 500 / sq.ft</div>
          <p>Covers all labour, materials, and clean-up. Tiles are excluded and supplied by the client.</p>
        </div>
        <div class="aside-card highlight">
          <div class="aside-label">Adhesive</div>
          <div class="aside-value">Tokyo Super HP</div>
          <p>High-performance wet-area adhesive — suitable for ceramic, porcelain, and large-format tiles.</p>
        </div>
        <div class="aside-card highlight">
          <div class="aside-label">Grout</div>
          <div class="aside-value">Swisstek</div>
          <p>Waterproof tile grout with colour-consistent, stain-resistant finish for bathroom environments.</p>
        </div>
        <div class="aside-card highlight">
          <div class="aside-label">Leveling</div>
          <div class="aside-value">Tile Leveling System</div>
          <p>Professional clip-and-wedge system on every tile — eliminates lippage and ensures a flat result.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Materials Strip -->
  <section class="materials-section">
    <div class="mat-inner">
      <div class="stag reveal">Materials Used</div>
      <h2 class="reveal">Specified Materials,<br />Every Job</h2>
      <p class="sdesc reveal">
        The same four products on every bathroom tiling job — no substitutions, no cutting corners.
      </p>
      <div class="mat-grid reveal">

        <div class="mat-card">
          <div class="mat-icon">
            <svg viewBox="0 0 48 48" fill="none">
              <rect x="14" y="6"  width="20" height="32" rx="3" stroke="#c4784a" stroke-width="2" fill="none" opacity=".7"/>
              <rect x="18" y="14" width="12" height="3"  rx="1" fill="#c4784a" opacity=".6"/>
              <rect x="18" y="21" width="8"  height="2"  rx="1" fill="#c4784a" opacity=".35"/>
              <rect x="18" y="26" width="10" height="2"  rx="1" fill="#c4784a" opacity=".35"/>
              <rect x="16" y="34" width="16" height="4"  rx="2" fill="#c4784a" opacity=".2"/>
            </svg>
          </div>
          <div class="mat-name">Tokyo Super HP</div>
          <div class="mat-type">Tile Adhesive</div>
          <div class="mat-desc">High-performance adhesive for wet areas. Strong bond on ceramic, porcelain, and large-format tiles on both walls and floors.</div>
        </div>

        <div class="mat-card">
          <div class="mat-icon">
            <svg viewBox="0 0 48 48" fill="none">
              <rect x="14" y="6"  width="20" height="32" rx="3" stroke="#c4784a" stroke-width="2" fill="none" opacity=".7"/>
              <rect x="18" y="14" width="12" height="3"  rx="1" fill="#c4784a" opacity=".6"/>
              <rect x="18" y="21" width="8"  height="2"  rx="1" fill="#c4784a" opacity=".35"/>
              <rect x="18" y="26" width="10" height="2"  rx="1" fill="#c4784a" opacity=".35"/>
              <rect x="16" y="34" width="16" height="4"  rx="2" fill="#c4784a" opacity=".2"/>
            </svg>
          </div>
          <div class="mat-name">Swisstek</div>
          <div class="mat-type">Tile Grout</div>
          <div class="mat-desc">Waterproof, stain-resistant grout suited for bathroom environments. Consistent colour and flush joints throughout.</div>
        </div>

        <div class="mat-card">
          <div class="mat-icon">
            <svg viewBox="0 0 48 48" fill="none">
              <!-- clip symbol -->
              <rect x="10" y="20" width="28" height="8"  rx="2" stroke="#c4784a" stroke-width="2" fill="none" opacity=".7"/>
              <line x1="24" y1="8"  x2="24" y2="20" stroke="#c4784a" stroke-width="2" opacity=".55"/>
              <line x1="24" y1="28" x2="24" y2="40" stroke="#c4784a" stroke-width="2" opacity=".3"/>
              <circle cx="24" cy="8" r="3" fill="#c4784a" opacity=".7"/>
            </svg>
          </div>
          <div class="mat-name">Tile Leveling System</div>
          <div class="mat-type">Clips & Wedges</div>
          <div class="mat-desc">Professional clip-and-wedge leveling on every tile. Eliminates lippage and ensures a perfectly flat, plumb surface.</div>
        </div>

        <div class="mat-card">
          <div class="mat-icon">
            <svg viewBox="0 0 48 48" fill="none">
              <!-- screed / layer symbol -->
              <rect x="4"  y="30" width="40" height="10" rx="1" fill="#c4784a" opacity=".55"/>
              <rect x="4"  y="22" width="40" height="6"  rx="1" fill="#c4784a" opacity=".25"/>
              <rect x="4"  y="16" width="40" height="4"  rx="1" fill="#c4784a" opacity=".12"/>
              <line x1="4" y1="30" x2="44" y2="30" stroke="#c4784a" stroke-width="1.5" opacity=".8"/>
            </svg>
          </div>
          <div class="mat-name">Floor Screed</div>
          <div class="mat-type">Sand & Cement</div>
          <div class="mat-desc">Mixed on site and laid to create a flat, solid base. Ensures correct falls toward drains and a stable surface for tiling.</div>
        </div>

      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="faq-section">
    <div class="faq-inner">
      <div class="stag">Common Questions</div>
      <h2>Bathroom Tiling FAQ</h2>
      <div class="faqs">
        <div class="faq reveal">
          <div class="faq-q">What does the Rs. 500/sq.ft rate include?</div>
          <div class="faq-a">It includes all labour and materials — floor screed (sand & cement), Tokyo Super HP adhesive, tile leveling system, Swisstek grout, precision cutting, and clean-up on completion. Tiles are not included and are supplied by the client.</div>
        </div>
        <div class="faq reveal">
          <div class="faq-q">Do I need to supply the tiles?</div>
          <div class="faq-a">Yes — tiles are supplied by the client. We work with whatever tiles you have chosen and advise on the correct quantities before the job starts.</div>
        </div>
        <div class="faq reveal">
          <div class="faq-q">Does this cover both wall and floor tiling?</div>
          <div class="faq-a">Yes — the Rs. 500/sq.ft rate applies to both wall and floor tiling within the bathroom. The total area is measured across both surfaces.</div>
        </div>
        <div class="faq reveal">
          <div class="faq-q">Is waterproofing included?</div>
          <div class="faq-a">Waterproofing membrane is not included in the tiling rate but can be added as a separate service. We recommend waterproofing wet zones before tiling — see our <a href="/services/waterproofing">Waterproofing</a> page for details.</div>
        </div>
        <div class="faq reveal">
          <div class="faq-q">What is the tile leveling system?</div>
          <div class="faq-a">It's a clip-and-wedge system placed under and between tiles during installation. It holds each tile at exactly the same height as its neighbours until the adhesive sets, eliminating any lippage (height difference between adjacent tiles). We use it on every bathroom job as standard.</div>
        </div>
        <div class="faq reveal">
          <div class="faq-q">Can you combine bathroom tiling with a full renovation?</div>
          <div class="faq-a">Yes — bathroom tiling can be done as part of a full renovation including demolition, waterproofing, plumbing, and fixtures. See our <a href="/services/bathroom-renovation">Bathroom Renovation</a> page for the complete scope.</div>
        </div>
      </div>
    </div>
  </section>

  <CTA />
  <Footer />
</Layout>

<style>
  .page-hero {
    background: var(--charcoal);
    padding: 7rem 4rem 5.5rem;
    position: relative;
    overflow: hidden;
  }

  .page-hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background:
      repeating-linear-gradient(0deg, transparent, transparent 60px, rgba(255,255,255,.01) 60px, rgba(255,255,255,.01) 61px),
      repeating-linear-gradient(90deg, transparent, transparent 60px, rgba(255,255,255,.01) 60px, rgba(255,255,255,.01) 61px);
  }

  .hero-inner {
    position: relative;
    z-index: 1;
    max-width: 760px;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: .5rem;
    font-size: .75rem;
    color: rgba(245,240,232,.6);
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .breadcrumb a {
    color: rgba(245,240,232,.6);
    text-decoration: none;
    transition: color .2s;
  }

  .breadcrumb a:hover { color: var(--clay); }

  .hero-icon {
    width: 3.2rem;
    height: 3.2rem;
    margin-bottom: 1.4rem;
  }

  h1 {
    font-family: 'Playfair Display', serif;
    font-size: clamp(2.2rem, 4vw, 3.5rem);
    font-weight: 700;
    color: var(--cream);
    line-height: 1.1;
    letter-spacing: -.02em;
    margin-bottom: 1rem;
  }

  .hero-desc {
    font-size: .96rem;
    font-weight: 300;
    color: rgba(245,240,232,.7);
    line-height: 1.75;
    max-width: 58ch;
    margin-bottom: 1.8rem;
  }

  .price-tag {
    display: inline-flex;
    align-items: baseline;
    gap: .6rem;
    margin-bottom: 2.2rem;
    background: rgba(196,120,74,.07);
    border: 1px solid rgba(196,120,74,.2);
    padding: .9rem 1.4rem;
    border-radius: 3px;
  }

  .p-amt {
    font-family: 'Playfair Display', serif;
    font-size: 1.6rem;
    font-weight: 700;
    color: var(--clay);
    line-height: 1;
  }

  .p-unit {
    font-size: .78rem;
    color: rgba(245,240,232,.55);
    letter-spacing: .02em;
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    align-items: center;
  }

  /* ── Details Section ── */

  .details-section {
    background: var(--sand);
    padding: 5.5rem 4rem;
  }

  .section-inner {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 5rem;
    align-items: start;
    max-width: 1200px;
    margin: 0 auto;
  }

  .include-list {
    list-style: none;
    margin-bottom: 2rem;
  }

  .include-list li {
    display: flex;
    gap: 1rem;
    padding: .9rem 0;
    border-bottom: 1px solid rgba(196,120,74,.15);
  }

  .include-list li:last-child { border-bottom: none; }

  .check {
    color: var(--clay);
    font-weight: 700;
    font-size: .9rem;
    flex-shrink: 0;
    margin-top: .1rem;
  }

  .include-list strong {
    display: block;
    font-size: .84rem;
    font-weight: 500;
    color: var(--charcoal);
    margin-bottom: .2rem;
  }

  .include-list span {
    font-size: .78rem;
    color: var(--warm-gray);
    line-height: 1.6;
  }

  .not-included {
    font-size: .8rem;
    color: var(--warm-gray);
    padding: 1rem 1.2rem;
    background: rgba(196,120,74,.07);
    border-left: 3px solid var(--clay);
    border-radius: 0 3px 3px 0;
    line-height: 1.65;
  }

  .not-included strong { color: var(--charcoal); }

  .not-included a {
    color: var(--clay);
    text-decoration: none;
    border-bottom: 1px solid rgba(196,120,74,.35);
  }

  .not-included a:hover { border-color: var(--clay); }

  .col-aside {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    position: sticky;
    top: 6rem;
  }

  .aside-card {
    background: rgba(255,255,255,.6);
    border: 1px solid rgba(196,120,74,.15);
    border-radius: 4px;
    padding: 1.4rem;
  }

  .aside-card.highlight {
    border-color: rgba(196,120,74,.3);
    background: rgba(196,120,74,.04);
  }

  .aside-label {
    font-size: .75rem;
    text-transform: uppercase;
    letter-spacing: .13em;
    color: var(--warm-gray);
    margin-bottom: .4rem;
  }

  .aside-value {
    font-family: 'Playfair Display', serif;
    font-size: 1.15rem;
    font-weight: 700;
    color: var(--charcoal);
    margin-bottom: .5rem;
  }

  .aside-card p {
    font-size: .76rem;
    color: var(--warm-gray);
    line-height: 1.65;
  }

  /* ── Materials Section ── */

  .materials-section {
    background: var(--charcoal);
    padding: 5.5rem 4rem;
  }

  .mat-inner {
    max-width: 1200px;
    margin: 0 auto;
  }

  .materials-section .stag { color: var(--clay); }
  .materials-section h2   { color: var(--cream); }
  .materials-section .sdesc { color: rgba(245,240,232,.6); }

  .mat-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5px;
    background: rgba(255,255,255,.07);
    border: 1.5px solid rgba(255,255,255,.07);
    margin-top: .5rem;
  }

  .mat-card {
    background: #211c18;
    padding: 2rem 1.8rem;
    display: flex;
    flex-direction: column;
    gap: .55rem;
    border-top: 3px solid transparent;
    transition: background .25s, border-top-color .25s;
  }

  .mat-card:hover {
    background: #28211a;
    border-top-color: var(--clay);
  }

  .mat-icon {
    width: 3rem;
    height: 3rem;
    margin-bottom: .4rem;
  }

  .mat-name {
    font-family: 'Playfair Display', serif;
    font-size: 1rem;
    font-weight: 700;
    color: var(--cream);
    line-height: 1.2;
  }

  .mat-type {
    font-size: .72rem;
    text-transform: uppercase;
    letter-spacing: .1em;
    color: var(--clay);
    margin-bottom: .2rem;
  }

  .mat-desc {
    font-size: .76rem;
    font-weight: 300;
    color: rgba(245,240,232,.55);
    line-height: 1.65;
  }

  /* ── FAQ Section ── */

  .faq-section {
    background: var(--off-white);
    padding: 5.5rem 4rem;
  }

  .faq-inner {
    max-width: 820px;
    margin: 0 auto;
  }

  .faqs {
    display: flex;
    flex-direction: column;
    gap: 0;
    margin-top: .5rem;
  }

  .faq {
    padding: 1.4rem 0;
    border-bottom: 1px solid var(--stone);
  }

  .faq:first-child { border-top: 1px solid var(--stone); }

  .faq-q {
    font-size: .9rem;
    font-weight: 600;
    color: var(--charcoal);
    margin-bottom: .55rem;
  }

  .faq-a {
    font-size: .82rem;
    font-weight: 300;
    color: var(--warm-gray);
    line-height: 1.75;
  }

  .faq-a a {
    color: var(--clay);
    text-decoration: none;
    border-bottom: 1px solid rgba(196,120,74,.3);
  }

  .faq-a a:hover { border-color: var(--clay); }

  /* ── Responsive ── */

  @media (max-width: 1100px) {
    .page-hero,
    .details-section,
    .materials-section,
    .faq-section {
      padding-left: 2.5rem;
      padding-right: 2.5rem;
    }

    .section-inner {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .col-aside { position: static; }

    .mat-grid { grid-template-columns: repeat(2, 1fr); }
  }

  @media (max-width: 768px) {
    .page-hero,
    .details-section,
    .materials-section,
    .faq-section {
      padding: 4rem 1.5rem;
    }

    .page-hero { padding-top: 6rem; }

    .mat-grid { grid-template-columns: 1fr; }

    .price-tag { flex-direction: column; gap: .3rem; }
  }
</style>
