import Layout from '../../layouts/Layout.astro';
import Nav from '../../components/Nav.astro';
import CTA from '../../components/CTA.astro';
import QuoteForm from '../../components/QuoteForm.astro';
import Footer from '../../components/Footer.astro';
---

<Layout
  title="Shower Cubicle — Frameless & Semi-Frameless Glass — TILERSHUB Sri Lanka"
  description="Professional shower cubicle installation across Sri Lanka. Frameless and semi-frameless tempered glass cubicles from Rs. 76,500. L-shape, panel swing, panel sliding, and double sliding configurations."
>
  <Nav />

  <!-- Page Hero -->
  <section class="page-hero">
    <div class="hero-inner">
      <div class="breadcrumb">
        <a href="/">Home</a>
        <span>›</span>
        <a href="/#services">Services</a>
        <span>›</span>
        <span>Shower Cubicle</span>
      </div>
      <div class="hero-icon reveal">
        <svg viewBox="0 0 48 48" fill="none">
          <rect x="6"  y="6"  width="16" height="36" rx="1" stroke="#c4784a" stroke-width="2" fill="none" opacity=".7"/>
          <rect x="26" y="6"  width="16" height="36" rx="1" stroke="#c4784a" stroke-width="2" fill="none" opacity=".4"/>
          <line x1="14" y1="6" x2="14" y2="42" stroke="#c4784a" stroke-width="1.5" opacity=".35"/>
          <line x1="34" y1="6" x2="34" y2="42" stroke="#c4784a" stroke-width="1.5" opacity=".2"/>
          <circle cx="23" cy="24" r="2" fill="#c4784a" opacity=".65"/>
        </svg>
      </div>
      <h1 class="reveal">Shower Cubicle</h1>
      <p class="hero-desc reveal">
        Frameless and semi-frameless glass shower cubicles — precision-fitted with
        tempered safety glass and stainless steel hardware. Four configurations to
        suit any bathroom layout, professionally installed throughout Sri Lanka.
      </p>
      <div class="hero-start reveal">
        <div class="hs-item">
          <span class="hs-label">Starting from</span>
          <span class="hs-price">Rs. 76,500</span>
        </div>
        <div class="hs-divider"></div>
        <div class="hs-item">
          <span class="hs-label">Glass thickness</span>
          <span class="hs-price">8mm / 10mm</span>
        </div>
      </div>
      <div class="hero-cta reveal">
        <a href="https://wa.me/94710111506?text=Hello%2C%20I%20would%20like%20a%20shower%20cubicle%20quote." class="btn-primary">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347z"/>
            <path d="M12 0C5.373 0 0 5.373 0 12c0 2.143.566 4.148 1.553 5.887L0 24l6.296-1.529A11.946 11.946 0 0012 24c6.627 0 12-5.373 12-12S18.627 0 12 0zm0 21.818a9.818 9.818 0 01-5.001-1.368l-.36-.213-3.733.906.946-3.643-.234-.374A9.818 9.818 0 1112 21.818z"/>
          </svg>
          Get a Quote
        </a>
        <a href="tel:+94710111506" class="btn-ghost">0710 111 506</a>
      </div>
    </div>
  </section>

  <!-- Cubicle Configurations -->
  <section class="cat-section">
    <div class="cat-inner">
      <div class="stag reveal">Configurations</div>
      <h2 class="reveal">Four Cubicle Configurations</h2>
      <p class="sdesc reveal">
        Choose the format that fits your bathroom layout — all configurations use
        quality tempered glass and stainless steel hardware, professionally installed.
      </p>
      <div class="cubicle-grid reveal">

        <div class="cubicle-card">
          <div class="cc-icon">
            <svg viewBox="0 0 60 60" fill="none">
              <rect x="8"  y="8"  width="22" height="44" rx="1" stroke="#c4784a" stroke-width="1.8" fill="none" opacity=".6"/>
              <rect x="8"  y="8"  width="44" height="22" rx="1" stroke="#c4784a" stroke-width="1.8" fill="none" opacity=".6"/>
              <path d="M30 8 A22 22 0 0 1 52 30" stroke="#c4784a" stroke-width="1.2" stroke-dasharray="3 3" fill="none" opacity=".4"/>
              <line x1="30" y1="8" x2="52" y2="30" stroke="#c4784a" stroke-width="1.5" opacity=".5"/>
            </svg>
          </div>
          <div class="cc-name">L Shape With Swing Door</div>
          <div class="cc-desc">Corner L-shaped enclosure with a swing door — suits larger bathrooms with clear swing clearance. Full glass on two sides.</div>
          <div class="cc-price">Rs. 97,500 <span>onwards</span></div>
          <a href="https://wa.me/94710111506?text=Hello%2C%20I%20would%20like%20a%20quote%20for%20an%20L%20Shape%20shower%20cubicle." class="cc-cta">Quote This →</a>
        </div>

        <div class="cubicle-card">
          <div class="cc-icon">
            <svg viewBox="0 0 60 60" fill="none">
              <rect x="10" y="8"  width="40" height="10" rx="1" stroke="#c4784a" stroke-width="1.8" fill="none" opacity=".6"/>
              <rect x="10" y="8"  width="10" height="44" rx="1" stroke="#c4784a" stroke-width="1.8" fill="none" opacity=".3"/>
              <path d="M50 8 A30 30 0 0 1 20 38" stroke="#c4784a" stroke-width="1.2" stroke-dasharray="3 3" fill="none" opacity=".4"/>
              <line x1="50" y1="8" x2="20" y2="38" stroke="#c4784a" stroke-width="1.5" opacity=".5"/>
            </svg>
          </div>
          <div class="cc-name">Panel Type With Swing Door</div>
          <div class="cc-desc">Single or double fixed panel with a swing door opening — compact and versatile. Best value entry into a glass cubicle.</div>
          <div class="cc-price">Rs. 76,500 <span>onwards</span></div>
          <a href="https://wa.me/94710111506?text=Hello%2C%20I%20would%20like%20a%20quote%20for%20a%20Panel%20Type%20Swing%20Door%20shower%20cubicle." class="cc-cta">Quote This →</a>
        </div>

        <div class="cubicle-card">
          <div class="cc-icon">
            <svg viewBox="0 0 60 60" fill="none">
              <rect x="10" y="8"  width="40" height="10" rx="1" stroke="#c4784a" stroke-width="1.8" fill="none" opacity=".6"/>
              <rect x="10" y="8"  width="10" height="44" rx="1" stroke="#c4784a" stroke-width="1.8" fill="none" opacity=".3"/>
              <line x1="26" y1="30" x2="46" y2="30" stroke="#c4784a" stroke-width="1.5" opacity=".5"/>
              <polyline points="40,25 46,30 40,35" stroke="#c4784a" stroke-width="1.5" fill="none" opacity=".5"/>
              <line x1="26" y1="22" x2="26" y2="44" stroke="#c4784a" stroke-width="2" opacity=".5"/>
            </svg>
          </div>
          <div class="cc-name">Panel Type With Sliding Door</div>
          <div class="cc-desc">Fixed panel with a smooth sliding door — no swing clearance needed. Ideal for tighter bathroom layouts.</div>
          <div class="cc-price">Rs. 88,500 <span>onwards</span></div>
          <a href="https://wa.me/94710111506?text=Hello%2C%20I%20would%20like%20a%20quote%20for%20a%20Panel%20Type%20Sliding%20Door%20shower%20cubicle." class="cc-cta">Quote This →</a>
        </div>

        <div class="cubicle-card">
          <div class="cc-icon">
            <svg viewBox="0 0 60 60" fill="none">
              <rect x="8" y="8"  width="44" height="10" rx="1" stroke="#c4784a" stroke-width="1.8" fill="none" opacity=".6"/>
              <rect x="8" y="8"  width="10" height="44" rx="1" stroke="#c4784a" stroke-width="1.8" fill="none" opacity=".3"/>
              <rect x="42" y="8" width="10" height="44" rx="1" stroke="#c4784a" stroke-width="1.8" fill="none" opacity=".3"/>
              <line x1="22" y1="30" x2="38" y2="30" stroke="#c4784a" stroke-width="1.5" opacity=".5"/>
              <polyline points="28,25 22,30 28,35" stroke="#c4784a" stroke-width="1.5" fill="none" opacity=".5"/>
              <polyline points="32,25 38,30 32,35" stroke="#c4784a" stroke-width="1.5" fill="none" opacity=".5"/>
            </svg>
          </div>
          <div class="cc-name">Double Sliding Doors</div>
          <div class="cc-desc">Two sliding panels that meet in the centre — wide opening, minimal intrusion into bathroom space. Premium configuration.</div>
          <div class="cc-price">Rs. 123,000 <span>onwards</span></div>
          <a href="https://wa.me/94710111506?text=Hello%2C%20I%20would%20like%20a%20quote%20for%20a%20Double%20Sliding%20Door%20shower%20cubicle." class="cc-cta">Quote This →</a>
        </div>

      </div>
    </div>
  </section>

  <!-- What's Included -->
  <section class="details-section">
    <div class="section-inner">
      <div class="col-content">
        <div class="stag">What's Covered</div>
        <h2>Included on Every<br />Shower Cubicle</h2>
        <p class="sdesc">
          Every cubicle installation comes with these standards as part of the price —
          no hidden extras.
        </p>
        <ul class="include-list">
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Tempered safety glass</strong>
              <span>8mm or 10mm toughened tempered glass — shatters safely if broken</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Stainless steel hardware</strong>
              <span>Hinges, handles, channels, and wall profiles in grade stainless steel throughout</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Site measurement & planning</strong>
              <span>We measure on site and plan the configuration before fabrication — no guesswork</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Professional installation</strong>
              <span>All fixing, sealing, and alignment done by our experienced installation team</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Silicone sealing</strong>
              <span>All joints sealed with quality silicone — watertight from day one</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Level and alignment checks</strong>
              <span>Every panel checked plumb and level before sign-off — no shortcuts</span>
            </div>
          </li>
        </ul>
        <div class="not-included">
          <strong>Final pricing depends on:</strong> Glass thickness, enclosure size, opening width, and configuration type.
          All quotes are issued after a site measurement — WhatsApp us to arrange.
        </div>
      </div>
      <div class="col-aside">
        <div class="aside-card">
          <div class="aside-label">Glass Type</div>
          <div class="aside-value">Tempered Safety</div>
          <p>All panels are toughened tempered glass — the safety standard for shower enclosures.</p>
        </div>
        <div class="aside-card">
          <div class="aside-label">Thickness</div>
          <div class="aside-value">8mm / 10mm</div>
          <p>We advise on the appropriate thickness for your specific cubicle size at the time of quoting.</p>
        </div>
        <div class="aside-card">
          <div class="aside-label">Pricing Note</div>
          <div class="aside-value">"Onwards"</div>
          <p>All prices shown are starting rates. Final price depends on dimensions, configuration, and glass thickness — confirmed after site measurement.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="faq-section">
    <div class="faq-inner">
      <div class="stag">Common Questions</div>
      <h2>Shower Cubicle FAQ</h2>
      <div class="faqs">
        <div class="faq reveal">
          <div class="faq-q">What does "onwards" mean in the pricing?</div>
          <div class="faq-a">The "onwards" prices are starting rates for standard configurations and dimensions. The final price depends on your specific size, glass thickness selected, number of panels, and any custom requirements. We confirm the exact price after measuring on site — no surprises.</div>
        </div>
        <div class="faq reveal">
          <div class="faq-q">What glass thickness do you use?</div>
          <div class="faq-a">We use 8mm or 10mm tempered glass depending on the configuration and panel size. We advise on the appropriate thickness for your specific cubicle at the time of quoting.</div>
        </div>
        <div class="faq reveal">
          <div class="faq-q">Which cubicle type is best for a small bathroom?</div>
          <div class="faq-a">For smaller bathrooms, the Panel Type With Sliding Door or Double Sliding Doors are usually best — they require no swing clearance so you don't lose usable space when opening the door. We assess your bathroom layout during the site visit and advise accordingly.</div>
        </div>
        <div class="faq reveal">
          <div class="faq-q">How long does installation take?</div>
          <div class="faq-a">A standard shower cubicle takes approximately one day to install once fabricated. Fabrication time after measurement is typically 3–7 working days.</div>
        </div>
        <div class="faq reveal">
          <div class="faq-q">Do you handle both the shower cubicle and the tiling?</div>
          <div class="faq-a">Yes — we offer both services and can coordinate them as part of a bathroom renovation or as standalone works. See our <a href="/services/bathroom-renovation">Bathroom Renovation</a> page for the full scope.</div>
        </div>
        <div class="faq reveal">
          <div class="faq-q">Can I also get hand railing installed?</div>
          <div class="faq-a">Yes — we install glass and stainless steel hand railing for staircases and balconies. See our <a href="/services/hand-railing">Hand Railing</a> page for details and pricing.</div>
        </div>
      </div>
    </div>
  </section>

  <QuoteForm phone="94710111506" service="Shower Cubicle" />
  <CTA />
  <Footer />
</Layout>

<style>
  .page-hero {
    background: var(--charcoal);
    padding: 7rem 4rem 5.5rem;
    position: relative;
    overflow: hidden;
  }

  .page-hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background:
      repeating-linear-gradient(0deg, transparent, transparent 60px, rgba(255,255,255,.01) 60px, rgba(255,255,255,.01) 61px),
      repeating-linear-gradient(90deg, transparent, transparent 60px, rgba(255,255,255,.01) 60px, rgba(255,255,255,.01) 61px);
  }

  .hero-inner {
    position: relative;
    z-index: 1;
    max-width: 760px;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: .5rem;
    font-size: .75rem;
    color: rgba(245,240,232,.6);
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .breadcrumb a {
    color: rgba(245,240,232,.6);
    text-decoration: none;
    transition: color .2s;
  }

  .breadcrumb a:hover { color: var(--clay); }

  .hero-icon {
    width: 3.2rem;
    height: 3.2rem;
    margin-bottom: 1.4rem;
  }

  h1 {
    font-family: 'Playfair Display', serif;
    font-size: clamp(2.2rem, 4vw, 3.5rem);
    font-weight: 700;
    color: var(--cream);
    line-height: 1.1;
    letter-spacing: -.02em;
    margin-bottom: 1rem;
  }

  .hero-desc {
    font-size: .96rem;
    font-weight: 300;
    color: rgba(245,240,232,.7);
    line-height: 1.75;
    max-width: 58ch;
    margin-bottom: 1.8rem;
  }

  .hero-start {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 2.2rem;
    background: rgba(196,120,74,.07);
    border: 1px solid rgba(196,120,74,.2);
    padding: .9rem 1.4rem;
    border-radius: 3px;
    width: fit-content;
    flex-wrap: wrap;
  }

  .hs-item {
    display: flex;
    flex-direction: column;
    gap: .2rem;
  }

  .hs-label {
    font-size: .75rem;
    text-transform: uppercase;
    letter-spacing: .1em;
    color: rgba(245,240,232,.6);
  }

  .hs-price {
    font-family: 'Playfair Display', serif;
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--clay);
  }

  .hs-divider {
    width: 1px;
    height: 2.5rem;
    background: rgba(196,120,74,.2);
    flex-shrink: 0;
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    align-items: center;
  }

  /* ── Cubicle Section ── */

  .cat-section {
    background: var(--off-white);
    padding: 5.5rem 4rem;
  }

  .cat-inner {
    max-width: 1200px;
    margin: 0 auto;
  }

  .cubicle-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5px;
    background: var(--stone);
    border: 1.5px solid var(--stone);
    margin-top: .5rem;
  }

  .cubicle-card {
    background: var(--cream);
    padding: 1.8rem;
    display: flex;
    flex-direction: column;
    gap: .7rem;
    transition: background .25s;
    border-top: 3px solid transparent;
  }

  .cubicle-card:hover {
    background: #fff;
    border-top-color: var(--clay);
  }

  .cc-icon {
    width: 3.2rem;
    height: 3.2rem;
    margin-bottom: .3rem;
  }

  .cc-name {
    font-family: 'Playfair Display', serif;
    font-size: .95rem;
    font-weight: 700;
    color: var(--charcoal);
    line-height: 1.25;
  }

  .cc-desc {
    font-size: .76rem;
    font-weight: 300;
    color: var(--warm-gray);
    line-height: 1.65;
    flex: 1;
  }

  .cc-price {
    font-family: 'Playfair Display', serif;
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--clay);
    margin-top: auto;
  }

  .cc-price span {
    font-family: 'DM Sans', sans-serif;
    font-size: .75rem;
    font-weight: 400;
    color: var(--warm-gray);
  }

  .cc-cta {
    display: inline-block;
    font-size: .75rem;
    font-weight: 500;
    color: var(--clay);
    text-decoration: none;
    border-bottom: 1px solid rgba(196,120,74,.3);
    padding-bottom: .1rem;
    transition: border-color .2s;
    width: fit-content;
  }

  .cc-cta:hover { border-color: var(--clay); }

  /* ── Details Section ── */

  .details-section {
    background: var(--sand);
    padding: 5.5rem 4rem;
  }

  .section-inner {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 5rem;
    align-items: start;
    max-width: 1200px;
    margin: 0 auto;
  }

  .include-list {
    list-style: none;
    margin-bottom: 2rem;
  }

  .include-list li {
    display: flex;
    gap: 1rem;
    padding: .9rem 0;
    border-bottom: 1px solid rgba(196,120,74,.15);
  }

  .include-list li:last-child { border-bottom: none; }

  .check {
    color: var(--clay);
    font-weight: 700;
    font-size: .9rem;
    flex-shrink: 0;
    margin-top: .1rem;
  }

  .include-list strong {
    display: block;
    font-size: .84rem;
    font-weight: 500;
    color: var(--charcoal);
    margin-bottom: .2rem;
  }

  .include-list span {
    font-size: .78rem;
    color: var(--warm-gray);
    line-height: 1.6;
  }

  .not-included {
    font-size: .8rem;
    color: var(--warm-gray);
    padding: 1rem 1.2rem;
    background: rgba(196,120,74,.07);
    border-left: 3px solid var(--clay);
    border-radius: 0 3px 3px 0;
    line-height: 1.65;
  }

  .not-included strong { color: var(--charcoal); }

  .col-aside {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    position: sticky;
    top: 6rem;
  }

  .aside-card {
    background: rgba(255,255,255,.6);
    border: 1px solid rgba(196,120,74,.15);
    border-radius: 4px;
    padding: 1.4rem;
  }

  .aside-label {
    font-size: .75rem;
    text-transform: uppercase;
    letter-spacing: .13em;
    color: var(--warm-gray);
    margin-bottom: .4rem;
  }

  .aside-value {
    font-family: 'Playfair Display', serif;
    font-size: 1.3rem;
    font-weight: 700;
    color: var(--charcoal);
    margin-bottom: .5rem;
  }

  .aside-card p {
    font-size: .76rem;
    color: var(--warm-gray);
    line-height: 1.65;
  }

  /* ── FAQ Section ── */

  .faq-section {
    background: var(--off-white);
    padding: 5.5rem 4rem;
  }

  .faq-inner {
    max-width: 820px;
    margin: 0 auto;
  }

  .faqs {
    display: flex;
    flex-direction: column;
    gap: 0;
    margin-top: .5rem;
  }

  .faq {
    padding: 1.4rem 0;
    border-bottom: 1px solid var(--stone);
  }

  .faq:first-child { border-top: 1px solid var(--stone); }

  .faq-q {
    font-size: .9rem;
    font-weight: 600;
    color: var(--charcoal);
    margin-bottom: .55rem;
  }

  .faq-a {
    font-size: .82rem;
    font-weight: 300;
    color: var(--warm-gray);
    line-height: 1.75;
  }

  .faq-a a {
    color: var(--clay);
    text-decoration: none;
    border-bottom: 1px solid rgba(196,120,74,.3);
  }

  .faq-a a:hover { border-color: var(--clay); }

  /* ── Responsive ── */

  @media (max-width: 1100px) {
    .page-hero,
    .cat-section,
    .details-section,
    .faq-section {
      padding-left: 2.5rem;
      padding-right: 2.5rem;
    }

    .cubicle-grid { grid-template-columns: repeat(2, 1fr); }

    .section-inner {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .col-aside { position: static; }
  }

  @media (max-width: 768px) {
    .page-hero,
    .cat-section,
    .details-section,
    .faq-section {
      padding: 4rem 1.5rem;
    }

    .page-hero { padding-top: 6rem; }

    .cubicle-grid { grid-template-columns: 1fr; }

    .hero-start { flex-direction: column; gap: .8rem; }
    .hs-divider { width: 3rem; height: 1px; }
  }
</style>
