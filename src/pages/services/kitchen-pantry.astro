  }

  .cov-card:hover { border-color: rgba(196,120,74,.35); }
  .cov-card.top { border-color: var(--clay); }

  .cov-icon { font-size: 1.4rem; margin-bottom: .7rem; }

  .cov-name {
    font-family: 'Playfair Display', serif;
    font-size: 1.05rem;
    font-weight: 700;
    color: var(--cream);
    margin-bottom: .5rem;
  }

  .cov-desc {
    font-size: .8rem;
    color: rgba(245,240,232,.4);
    line-height: 1.65;
    margin-bottom: .8rem;
  }

  .cov-dims {
    font-size: .7rem;
    color: var(--clay);
    font-weight: 500;
    letter-spacing: .05em;
  }

  /* ‚îÄ‚îÄ Tile Types ‚îÄ‚îÄ */

  .tile-types {
    background: var(--cream);
    padding: 5.5rem 4rem;
  }

  .types-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
  }

  .type-card {
    background: var(--off-white);
    border: 1.5px solid var(--stone);
    padding: 1.8rem 1.5rem;
    border-radius: 3px;
    transition: border-color .25s;
  }

  .type-card:hover { border-color: var(--clay); }
  .type-card.featured { border-color: var(--clay); }

  .type-name {
    font-family: 'Playfair Display', serif;
    font-size: 1rem;
    font-weight: 700;
    color: var(--charcoal);
    margin-bottom: .3rem;
  }

  .type-stars {
    color: var(--clay);
    font-size: .72rem;
    margin-bottom: .6rem;
  }

  .type-desc {
    font-size: .78rem;
    color: var(--warm-gray);
    line-height: 1.6;
    margin-bottom: .9rem;
  }

  .type-tags {
    display: flex;
    flex-wrap: wrap;
    gap: .3rem;
  }

  .type-tags span {
    background: rgba(196,120,74,.1);
    border: 1px solid rgba(196,120,74,.22);
    color: var(--clay);
    font-size: .6rem;
    font-weight: 500;
    padding: .15rem .5rem;
    border-radius: 20px;
  }

  /* ‚îÄ‚îÄ Process ‚îÄ‚îÄ */

  .process {
    background: var(--sand);
    padding: 5.5rem 4rem;
  }

  .steps {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .step {
    padding: 1.8rem;
    background: rgba(255,255,255,.5);
    border-top: 2px solid var(--stone);
    border-radius: 3px;
    transition: border-color .2s;
  }

  .step:hover { border-color: var(--clay); }

  .step-num {
    font-family: 'Playfair Display', serif;
    font-size: 2rem;
    font-weight: 700;
    color: var(--stone);
    line-height: 1;
    margin-bottom: .7rem;
  }

  .step-name {
    font-size: .9rem;
    font-weight: 500;
    color: var(--charcoal);
    margin-bottom: .5rem;
  }

  .step-desc {
    font-size: .8rem;
    color: var(--warm-gray);
    line-height: 1.65;
  }

  /* ‚îÄ‚îÄ FAQ ‚îÄ‚îÄ */

  .faq {
    background: var(--off-white);
    padding: 5.5rem 4rem;
  }

  .faq-list {
    max-width: 720px;
    display: flex;
    flex-direction: column;
    gap: .6rem;
  }

  .faq-item {
    background: var(--cream);
    border-radius: 3px;
    border: 1px solid var(--stone);
    overflow: hidden;
  }

  .faq-item summary {
    padding: 1.1rem 1.4rem;
    font-size: .9rem;
    font-weight: 500;
    color: var(--charcoal);
    cursor: pointer;
    list-style: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  .faq-item summary::-webkit-details-marker { display: none; }

  .faq-item summary::after {
    content: '+';
    font-size: 1.2rem;
    color: var(--clay);
    flex-shrink: 0;
  }

  .faq-item[open] summary::after { content: '‚àí'; }

  .faq-item p {
    padding: 0 1.4rem 1.1rem;
    font-size: .85rem;
    color: var(--warm-gray);
    line-height: 1.7;
  }

  /* ‚îÄ‚îÄ Responsive ‚îÄ‚îÄ */

  @media (max-width: 1100px) {
    .overview, .coverage, .tile-types, .process, .faq {
      padding-left: 2.5rem;
      padding-right: 2.5rem;
    }

    .overview { grid-template-columns: 1fr; gap: 3rem; }
    .coverage-grid { grid-template-columns: 1fr; }
    .types-grid { grid-template-columns: repeat(2, 1fr); }
    .steps { grid-template-columns: repeat(2, 1fr); }
  }

  @media (max-width: 768px) {
    .overview, .coverage, .tile-types, .process, .faq {
      padding: 4rem 1.5rem;
    }

    .types-grid { grid-template-columns: 1fr; }
    .steps { grid-template-columns: 1fr; }
  }
</style>
