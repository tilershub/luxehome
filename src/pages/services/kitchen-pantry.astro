  }

  .pc-unit {
    font-size: .78rem;
    color: rgba(245,240,232,.4);
    margin-top: .25rem;
    margin-bottom: .8rem;
  }

  .pc-note {
    font-size: .78rem;
    color: rgba(245,240,232,.5);
    padding-top: .75rem;
    border-top: 1px solid rgba(255,255,255,.08);
    line-height: 1.6;
  }

  .price-note {
    font-size: .75rem;
    color: var(--warm-gray);
    text-align: center;
  }

  /* ‚îÄ‚îÄ Coverage ‚îÄ‚îÄ */

  .coverage {
    background: var(--charcoal);
    padding: 5.5rem 4rem;
  }

  .coverage h2 { color: var(--cream); }
  .coverage .sdesc { color: rgba(245,240,232,.45); }

