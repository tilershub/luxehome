---
import Layout from '../../layouts/Layout.astro';
import Nav from '../../components/Nav.astro';
import CTA from '../../components/CTA.astro';
import Footer from '../../components/Footer.astro';
---

<Layout
  title="Kitchen Pantry Tiling Services — TILERSHUB Sri Lanka"
  description="Professional kitchen pantry tiling in Sri Lanka. Countertop and backsplash installation at one linear-foot rate. Waterproof joints throughout. From Rs. 5,000/lin.ft."
>
  <Nav />

  <!-- Page Hero -->
  <section class="page-hero">
    <div class="hero-inner">
      <div class="breadcrumb">
        <a href="/">Home</a>
        <span>›</span>
        <a href="/#services">Services</a>
        <span>›</span>
        <span>Kitchen Pantry</span>
      </div>
      <div class="hero-icon reveal">
        <svg viewBox="0 0 48 48" fill="none">
          <rect x="4"  y="22" width="40" height="4"  rx="1" fill="#c4784a" opacity=".9"/>
          <rect x="4"  y="28" width="40" height="16" rx="1" fill="#c4784a" opacity=".2"/>
          <rect x="8"  y="8"  width="4"  height="12" rx="1" fill="#c4784a" opacity=".55"/>
          <rect x="16" y="8"  width="4"  height="12" rx="1" fill="#c4784a" opacity=".55"/>
          <rect x="24" y="8"  width="4"  height="12" rx="1" fill="#c4784a" opacity=".55"/>
          <rect x="32" y="8"  width="4"  height="12" rx="1" fill="#c4784a" opacity=".55"/>
        </svg>
      </div>
      <h1 class="reveal">Kitchen Pantry Tiling</h1>
      <p class="hero-desc reveal">
        Countertop and backsplash tiled together at one transparent linear-foot rate.
        Perfectly aligned joints, waterproof grout throughout, and a clean finish
        that makes the whole kitchen look considered.
      </p>
      <div class="price-tags reveal">
        <div class="price-tag">
          <span class="p-amt">Rs. 5,000</span>
          <span class="p-unit">/ lin.ft — top &amp; backsplash</span>
        </div>
      </div>
      <div class="hero-cta reveal">
        <a href="https://wa.me/94774503744?text=Hello%2C%20I%20would%20like%20a%20kitchen%20pantry%20tiling%20quote." class="btn-primary">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347z"/>
            <path d="M12 0C5.373 0 0 5.373 0 12c0 2.143.566 4.148 1.553 5.887L0 24l6.296-1.529A11.946 11.946 0 0012 24c6.627 0 12-5.373 12-12S18.627 0 12 0zm0 21.818a9.818 9.818 0 01-5.001-1.368l-.36-.213-3.733.906.946-3.643-.234-.374A9.818 9.818 0 1112 21.818z"/>
          </svg>
          Get a Quote
        </a>
        <a href="tel:+94774503744" class="btn-ghost">0774 503 744</a>
      </div>
    </div>
  </section>

  <!-- What's Included -->
  <section class="details-section">
    <div class="section-inner">
      <div class="col-content">
        <div class="stag">What's Covered</div>
        <h2>Everything in the<br />Rs. 5,000/lin.ft Rate</h2>
        <p class="sdesc">
          One rate covers both the countertop and the backsplash — perfectly aligned
          and waterproofed throughout.
        </p>
        <ul class="include-list">
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Countertop tiling</strong>
              <span>Full horizontal worktop surface tiled with precision adhesive and leveling system</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Backsplash tiling</strong>
              <span>Wall tiles behind counter — aligned to countertop joints for a seamless, grid-matched look</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Edge & nosing finish</strong>
              <span>Countertop edges finished cleanly — bullnose tile or router finish as applicable</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Tokyo Super Tile Adhesive</strong>
              <span>Enhanced bonding adhesive rated for kitchen environments and all tile types</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Tile Leveling System</strong>
              <span>Applied on countertop to ensure zero lippage across the full working surface</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Waterproof Swisstek Grout</strong>
              <span>Stain-resistant, waterproof joints on both top and splash — flush-finished throughout</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Sink & hob cut-outs</strong>
              <span>Precise tile cuts around sink openings and hob cut-outs where required</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Clean-up & handover</strong>
              <span>All tile waste removed, surfaces wiped down, and work area left clean</span>
            </div>
          </li>
        </ul>
        <div class="not-included">
          <strong>Not included:</strong> Tiles and tile accessories — you source your preferred tiles.
          Cabinet installation and sink/hob supply or fitting are separate trades.
        </div>
      </div>
      <div class="col-aside">
        <div class="aside-card">
          <div class="aside-label">Rate</div>
          <div class="aside-value">Rs. 5,000</div>
          <p>Per linear foot — covers the full countertop width and backsplash height in one run.</p>
        </div>
        <div class="aside-card">
          <div class="aside-label">Scope</div>
          <div class="aside-value">Top & Backsplash</div>
          <p>Countertop surface and wall backsplash tiled together, joints perfectly aligned across both planes.</p>
        </div>
        <div class="aside-card">
          <div class="aside-label">Grout Type</div>
          <div class="aside-value">Waterproof</div>
          <p>Swisstek waterproof, stain-resistant grout — essential for all kitchen work surfaces and splash areas.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Process -->
  <section class="process-section">
    <div class="section-inner">
      <div class="stag">How It Works</div>
      <h2>Our Kitchen Pantry Process</h2>
      <p class="sdesc">
        A clean, methodical process that keeps your kitchen in order while we work.
      </p>
      <div class="steps">
        <div class="step reveal">
          <div class="step-num">01</div>
          <div class="step-content">
            <div class="step-name">Site Assessment</div>
            <div class="step-desc">We measure the countertop run, assess cabinet top conditions, confirm backsplash height, and discuss tile choice and layout with you.</div>
          </div>
        </div>
        <div class="step reveal">
          <div class="step-num">02</div>
          <div class="step-content">
            <div class="step-name">Surface Preparation</div>
            <div class="step-desc">Cabinet tops cleaned, checked for level, and any uneven spots addressed. Wall surface behind backsplash primed for adhesion.</div>
          </div>
        </div>
        <div class="step reveal">
          <div class="step-num">03</div>
          <div class="step-content">
            <div class="step-name">Layout Planning</div>
            <div class="step-desc">Tile layout set so countertop and backsplash joints align. Cut tiles kept to non-prominent positions for the cleanest visual result.</div>
          </div>
        </div>
        <div class="step reveal">
          <div class="step-num">04</div>
          <div class="step-content">
            <div class="step-name">Countertop Installation</div>
            <div class="step-desc">Tiles laid on countertop with adhesive and leveling system. Sink and hob cut-outs precisely cut. Edges nosing-finished.</div>
          </div>
        </div>
        <div class="step reveal">
          <div class="step-num">05</div>
          <div class="step-content">
            <div class="step-name">Backsplash Installation</div>
            <div class="step-desc">Wall tiles installed above counter, joints aligned to the countertop grid for a continuous, coherent look from worktop to wall.</div>
          </div>
        </div>
        <div class="step reveal">
          <div class="step-num">06</div>
          <div class="step-content">
            <div class="step-name">Grouting & Handover</div>
            <div class="step-desc">Waterproof Swisstek grout applied to all joints on both surfaces, finished flush. Full clean-up and site handed back ready to use.</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="faq-section">
    <div class="section-inner faq-inner">
      <div class="stag">Common Questions</div>
      <h2>Kitchen Pantry FAQ</h2>
      <div class="faqs">
        <div class="faq reveal">
          <div class="faq-q">How is the linear foot measured?</div>
          <div class="faq-a">One linear foot is the length of your pantry run measured along the front edge of the counter. The rate includes the full countertop width and the standard backsplash height (typically up to the underside of the upper cabinets, or 600mm).</div>
        </div>
        <div class="faq reveal">
          <div class="faq-q">Do you tile both sides of a peninsula or island?</div>
          <div class="faq-a">Each linear foot of run is one rate. An island with exposed sides on multiple faces would be measured for each face separately — we confirm this on the site visit.</div>
        </div>
        <div class="faq reveal">
          <div class="faq-q">Do you supply the tiles?</div>
          <div class="faq-a">No — you source your preferred tiles. We supply all installation materials: adhesive, leveling system, and waterproof grout.</div>
        </div>
        <div class="faq reveal">
          <div class="faq-q">Can you cut around a sink or hob?</div>
          <div class="faq-a">Yes — precision cut-outs around sinks and hobs are included in the rate. We need the sink/hob template or measurements before work begins.</div>
        </div>
        <div class="faq reveal">
          <div class="faq-q">What if my backsplash is taller than standard?</div>
          <div class="faq-a">Tall backsplashes (e.g. running floor-to-ceiling) are assessed individually. WhatsApp us with photos and measurements for an accurate quote.</div>
        </div>
      </div>
    </div>
  </section>

  <CTA />
  <Footer />
</Layout>

<style>
  .page-hero {
    background: var(--charcoal);
    padding: 7rem 4rem 5.5rem;
    position: relative;
    overflow: hidden;
  }

  .page-hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background:
      repeating-linear-gradient(0deg, transparent, transparent 60px, rgba(255,255,255,.01) 60px, rgba(255,255,255,.01) 61px),
      repeating-linear-gradient(90deg, transparent, transparent 60px, rgba(255,255,255,.01) 60px, rgba(255,255,255,.01) 61px);
  }

  .hero-inner {
    position: relative;
    z-index: 1;
    max-width: 760px;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: .5rem;
    font-size: .75rem;
    color: rgba(245,240,232,.6);
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .breadcrumb a {
    color: rgba(245,240,232,.6);
    text-decoration: none;
    transition: color .2s;
  }

  .breadcrumb a:hover { color: var(--clay); }

  .hero-icon {
    width: 3.2rem;
    height: 3.2rem;
    margin-bottom: 1.4rem;
  }

  h1 {
    font-family: 'Playfair Display', serif;
    font-size: clamp(2.2rem, 4vw, 3.5rem);
    font-weight: 700;
    color: var(--cream);
    line-height: 1.1;
    letter-spacing: -.02em;
    margin-bottom: 1rem;
  }

  .hero-desc {
    font-size: .96rem;
    font-weight: 300;
    color: rgba(245,240,232,.7);
    line-height: 1.75;
    max-width: 58ch;
    margin-bottom: 1.8rem;
  }

  .price-tags {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 2.2rem;
  }

  .price-tag {
    display: flex;
    align-items: baseline;
    gap: .4rem;
    background: rgba(196,120,74,.1);
    border: 1px solid rgba(196,120,74,.25);
    padding: .55rem 1rem;
    border-radius: 3px;
  }

  .p-amt {
    font-family: 'Playfair Display', serif;
    font-size: 1.3rem;
    font-weight: 700;
    color: var(--clay);
  }

  .p-unit {
    font-size: .75rem;
    color: rgba(245,240,232,.6);
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    align-items: center;
  }

  .details-section {
    background: var(--off-white);
    padding: 5.5rem 4rem;
  }

  .section-inner {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 5rem;
    align-items: start;
    max-width: 1200px;
    margin: 0 auto;
  }

  .include-list {
    list-style: none;
    margin-bottom: 2rem;
  }

  .include-list li {
    display: flex;
    gap: 1rem;
    padding: .9rem 0;
    border-bottom: 1px solid var(--stone);
  }

  .include-list li:last-child { border-bottom: none; }

  .check {
    color: var(--clay);
    font-weight: 700;
    font-size: .9rem;
    flex-shrink: 0;
    margin-top: .1rem;
  }

  .include-list strong {
    display: block;
    font-size: .84rem;
    font-weight: 500;
    color: var(--charcoal);
    margin-bottom: .2rem;
  }

  .include-list span {
    font-size: .78rem;
    color: var(--warm-gray);
    line-height: 1.6;
  }

  .not-included {
    font-size: .8rem;
    color: var(--warm-gray);
    padding: 1rem 1.2rem;
    background: rgba(196,120,74,.06);
    border-left: 3px solid var(--clay);
    border-radius: 0 3px 3px 0;
    line-height: 1.65;
  }

  .not-included strong { color: var(--charcoal); }

  .col-aside {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    position: sticky;
    top: 6rem;
  }

  .aside-card {
    background: var(--cream);
    border: 1px solid var(--stone);
    border-radius: 4px;
    padding: 1.4rem;
  }

  .aside-label {
    font-size: .75rem;
    text-transform: uppercase;
    letter-spacing: .13em;
    color: var(--warm-gray);
    margin-bottom: .4rem;
  }

  .aside-value {
    font-family: 'Playfair Display', serif;
    font-size: 1.3rem;
    font-weight: 700;
    color: var(--charcoal);
    margin-bottom: .5rem;
  }

  .aside-card p {
    font-size: .76rem;
    color: var(--warm-gray);
    line-height: 1.65;
  }

  .process-section {
    background: var(--charcoal);
    padding: 5.5rem 4rem;
  }

  .process-section .stag { color: var(--clay); }
  .process-section h2 { color: var(--cream); }
  .process-section .sdesc { color: rgba(245,240,232,.6); }

  .steps {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5px;
    background: rgba(255,255,255,.07);
    border: 1.5px solid rgba(255,255,255,.07);
  }

  .step {
    background: #211c18;
    padding: 2rem;
    transition: background .25s;
  }

  .step:hover { background: #28211a; }

  .step-num {
    font-family: 'Playfair Display', serif;
    font-size: 2rem;
    font-weight: 900;
    color: rgba(196,120,74,.25);
    line-height: 1;
    margin-bottom: 1rem;
  }

  .step-name {
    font-size: .88rem;
    font-weight: 600;
    color: var(--cream);
    margin-bottom: .5rem;
  }

  .step-desc {
    font-size: .78rem;
    font-weight: 300;
    color: rgba(245,240,232,.6);
    line-height: 1.7;
  }

  .faq-section {
    background: var(--sand);
    padding: 5.5rem 4rem;
  }

  .faq-inner {
    grid-template-columns: 1fr;
    max-width: 820px;
  }

  .faqs {
    display: flex;
    flex-direction: column;
    gap: 0;
    margin-top: .5rem;
  }

  .faq {
    padding: 1.4rem 0;
    border-bottom: 1px solid rgba(196,120,74,.18);
  }

  .faq:first-child { border-top: 1px solid rgba(196,120,74,.18); }

  .faq-q {
    font-size: .9rem;
    font-weight: 600;
    color: var(--charcoal);
    margin-bottom: .55rem;
  }

  .faq-a {
    font-size: .82rem;
    font-weight: 300;
    color: var(--warm-gray);
    line-height: 1.75;
  }

  @media (max-width: 1100px) {
    .page-hero,
    .details-section,
    .process-section,
    .faq-section {
      padding-left: 2.5rem;
      padding-right: 2.5rem;
    }

    .section-inner {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .col-aside { position: static; }

    .steps { grid-template-columns: repeat(2, 1fr); }
  }

  @media (max-width: 768px) {
    .page-hero,
    .details-section,
    .process-section,
    .faq-section {
      padding: 4rem 1.5rem;
    }

    .page-hero { padding-top: 6rem; }

    .steps { grid-template-columns: 1fr; }
  }
</style>
