        <div class="area-pill">
          <svg viewBox="0 0 20 20" fill="none">
            <rect x="2" y="14" width="16" height="4" rx="1" fill="#c4784a" opacity=".6"/>
            <rect x="2" y="2"  width="16" height="3" rx="1" fill="#c4784a" opacity=".3"/>
            <path d="M5 5 L5 14" stroke="#c4784a" stroke-width="1.5" opacity=".3"/>
            <path d="M15 5 L15 14" stroke="#c4784a" stroke-width="1.5" opacity=".3"/>
          </svg>
          Terrace
        </div>
        <div class="area-pill">
          <svg viewBox="0 0 20 20" fill="none">
