---
import Layout from '../../layouts/Layout.astro';
import Nav from '../../components/Nav.astro';
import CTA from '../../components/CTA.astro';
import QuoteForm from '../../components/QuoteForm.astro';
import Footer from '../../components/Footer.astro';
---

<Layout
  title="Staircase Tiling Services — TILERSHUB Sri Lanka"
  description="Expert staircase tiling in Sri Lanka. Double nosing, router edge finish, side elevation and skirting included. All-inclusive at Rs. 8,500 per step."
>
  <Nav />

  <!-- Page Hero -->
  <section class="page-hero">
    <div class="hero-inner">
      <div class="breadcrumb">
        <a href="/">Home</a>
        <span>›</span>
        <a href="/#services">Services</a>
        <span>›</span>
        <span>Staircase Tiling</span>
      </div>
      <div class="hero-icon reveal">
        <svg viewBox="0 0 48 48" fill="none">
          <rect x="4"  y="37" width="40" height="7" rx="1" fill="#c4784a" opacity=".85"/>
          <rect x="4"  y="28" width="30" height="7" rx="1" fill="#c4784a" opacity=".6"/>
          <rect x="4"  y="19" width="20" height="7" rx="1" fill="#c4784a" opacity=".38"/>
          <rect x="4"  y="10" width="10" height="7" rx="1" fill="#c4784a" opacity=".2"/>
          <rect x="36" y="6"  width="8"  height="38" rx="1" fill="#c4784a" opacity=".9"/>
        </svg>
      </div>
      <h1 class="reveal">Staircase Tiling</h1>
      <p class="hero-desc reveal">
        Every step finished with double nosing, router edge detail, side elevation tiling,
        and skirting — all at one all-inclusive rate. The result is a staircase that looks
        as premium as the rest of your space.
      </p>
      <div class="price-tags reveal">
        <div class="price-tag">
          <span class="p-amt">Rs. 8,500</span>
          <span class="p-unit">/ step — complete</span>
        </div>
      </div>
      <div class="hero-cta reveal">
        <a href="https://wa.me/94774503744?text=Hello%2C%20I%20would%20like%20a%20staircase%20tiling%20quote." class="btn-primary">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347z"/>
            <path d="M12 0C5.373 0 0 5.373 0 12c0 2.143.566 4.148 1.553 5.887L0 24l6.296-1.529A11.946 11.946 0 0012 24c6.627 0 12-5.373 12-12S18.627 0 12 0zm0 21.818a9.818 9.818 0 01-5.001-1.368l-.36-.213-3.733.906.946-3.643-.234-.374A9.818 9.818 0 1112 21.818z"/>
          </svg>
          Get a Quote
        </a>
        <a href="tel:+94774503744" class="btn-ghost">0774 503 744</a>
      </div>
    </div>
  </section>

  <!-- What's Included -->
  <section class="details-section">
    <div class="section-inner">
      <div class="col-content">
        <div class="stag">What's Covered</div>
        <h2>Everything in the<br />Rs. 8,500/step Rate</h2>
        <p class="sdesc">
          The per-step price is all-in — every element of a properly finished staircase
          step is included, with no hidden extras.
        </p>
        <ul class="include-list">
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Tread tiling</strong>
              <span>Full horizontal step surface tiled with precision adhesive bedding</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Riser tiling</strong>
              <span>Vertical face of each step fully tiled for a clean, seamless finish</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Double nosing</strong>
              <span>Two-layer nosing profile on every step edge — safe, durable, and sharp</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Router edge finish</strong>
              <span>Edges routed smooth for a beveled, high-end look — no exposed raw cuts</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Side elevation tiling</strong>
              <span>Side cheek / stringer wall tiled to match the staircase for a complete look</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Skirting</strong>
              <span>Skirting tiles applied along the wall side of each step where applicable</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Premium adhesive & tile leveling</strong>
              <span>Tokyo Super Tile Adhesive with tile leveling system on each tread surface</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Swisstek Grout</strong>
              <span>Stain-resistant, colour-consistent grout on all joints — flush-finished throughout</span>
            </div>
          </li>
        </ul>
        <div class="not-included">
          <strong>Not included:</strong> Tiles and tile accessories — you source your preferred tiles.
          Handrail or balustrade work is not part of this service.
        </div>
      </div>
      <div class="col-aside">
        <div class="aside-card">
          <div class="aside-label">Price Per Step</div>
          <div class="aside-value">Rs. 8,500</div>
          <p>Complete price — tread, riser, nosing, router edge, side elevation, and skirting all included.</p>
        </div>
        <div class="aside-card">
          <div class="aside-label">Edge Finish</div>
          <div class="aside-value">Router Edge</div>
          <p>Every exposed edge is router-finished — no raw tile cuts, no tile trim required.</p>
        </div>
        <div class="aside-card">
          <div class="aside-label">Materials Grade</div>
          <div class="aside-value">5★ Premium</div>
          <p>Tokyo Super Tile Adhesive · Tile Leveling System · Swisstek Grout throughout.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Process -->
  <section class="process-section">
    <div class="section-inner">
      <div class="stag">How It Works</div>
      <h2>Our Staircase Process</h2>
      <p class="sdesc">
        A methodical approach to every flight — from measuring to the final step handover.
      </p>
      <div class="steps">
        <div class="step reveal">
          <div class="step-num">01</div>
          <div class="step-content">
            <div class="step-name">Measurement & Assessment</div>
            <div class="step-desc">We measure every step, tread depth, riser height, and nosing projection. Side elevation and skirting extent confirmed on site.</div>
          </div>
        </div>
        <div class="step reveal">
          <div class="step-num">02</div>
          <div class="step-content">
            <div class="step-name">Tile Planning</div>
            <div class="step-desc">Tile layout mapped for each tread to minimise cuts and ensure symmetry. Pattern and direction agreed with you before any work begins.</div>
          </div>
        </div>
        <div class="step reveal">
          <div class="step-num">03</div>
          <div class="step-content">
            <div class="step-name">Substrate Preparation</div>
            <div class="step-desc">All stair surfaces checked for stability, high spots ground back, and substrate primed ready for adhesive bonding.</div>
          </div>
        </div>
        <div class="step reveal">
          <div class="step-num">04</div>
          <div class="step-content">
            <div class="step-name">Tread & Riser Installation</div>
            <div class="step-desc">Each step tiled from the bottom up — tread first, then riser, with tile leveling clips on all treads for zero lippage.</div>
          </div>
        </div>
        <div class="step reveal">
          <div class="step-num">05</div>
          <div class="step-content">
            <div class="step-name">Nosing & Router Finish</div>
            <div class="step-desc">Double nosing profile applied on every step edge. All exposed cuts router-finished to a smooth bevel — no tile trim needed.</div>
          </div>
        </div>
        <div class="step reveal">
          <div class="step-num">06</div>
          <div class="step-content">
            <div class="step-name">Grouting & Handover</div>
            <div class="step-desc">Swisstek grout applied to all joints, finished flush. Side elevation and skirting completed. Full clean-up and inspection before handover.</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="faq-section">
    <div class="section-inner faq-inner">
      <div class="stag">Common Questions</div>
      <h2>Staircase Tiling FAQ</h2>
      <div class="faqs">
        <div class="faq reveal">
          <div class="faq-q">What counts as one "step"?</div>
          <div class="faq-a">One step includes the tread (horizontal surface), the riser (vertical face), the nosing finish, and a proportional share of the side elevation and skirting. The Rs. 8,500 rate covers all of this for each step.</div>
        </div>
        <div class="faq reveal">
          <div class="faq-q">Do you supply the tiles?</div>
          <div class="faq-a">No — you source tiles from any supplier you prefer. We handle all installation, nosing, edge finishing, adhesive, and grout.</div>
        </div>
        <div class="faq reveal">
          <div class="faq-q">What tile sizes work for staircases?</div>
          <div class="faq-a">Most standard staircase tiles (300×600mm, 400×800mm) are ideal. We can advise on sizing during the site visit to ensure the tile format works well for your step dimensions.</div>
        </div>
        <div class="faq reveal">
          <div class="faq-q">Is a handrail or balustrade included?</div>
          <div class="faq-a">No — our service covers only the tiling, nosing, and finishing work. Handrail and balustrade installation is a separate trade.</div>
        </div>
        <div class="faq reveal">
          <div class="faq-q">Can you tile over existing stair tiles?</div>
          <div class="faq-a">In some cases yes — it depends on the condition of the existing surface and the height constraints. We assess this during the site visit and advise accordingly.</div>
        </div>
      </div>
    </div>
  </section>

  <QuoteForm phone="94774503744" service="Staircase Tiling" />
  <CTA />
  <Footer />
</Layout>

<style>
  /* ── Page Hero ── */

  .page-hero {
    background: var(--charcoal);
    padding: 7rem 4rem 5.5rem;
    position: relative;
    overflow: hidden;
  }

  .page-hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background:
      repeating-linear-gradient(0deg, transparent, transparent 60px, rgba(255,255,255,.01) 60px, rgba(255,255,255,.01) 61px),
      repeating-linear-gradient(90deg, transparent, transparent 60px, rgba(255,255,255,.01) 60px, rgba(255,255,255,.01) 61px);
  }

  .hero-inner {
    position: relative;
    z-index: 1;
    max-width: 760px;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: .5rem;
    font-size: .75rem;
    color: rgba(245,240,232,.6);
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .breadcrumb a {
    color: rgba(245,240,232,.6);
    text-decoration: none;
    transition: color .2s;
  }

  .breadcrumb a:hover { color: var(--clay); }

  .hero-icon {
    width: 3.2rem;
    height: 3.2rem;
    margin-bottom: 1.4rem;
  }

  h1 {
    font-family: 'Playfair Display', serif;
    font-size: clamp(2.2rem, 4vw, 3.5rem);
    font-weight: 700;
    color: var(--cream);
    line-height: 1.1;
    letter-spacing: -.02em;
    margin-bottom: 1rem;
  }

  .hero-desc {
    font-size: .96rem;
    font-weight: 300;
    color: rgba(245,240,232,.7);
    line-height: 1.75;
    max-width: 58ch;
    margin-bottom: 1.8rem;
  }

  .price-tags {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 2.2rem;
  }

  .price-tag {
    display: flex;
    align-items: baseline;
    gap: .4rem;
    background: rgba(196,120,74,.1);
    border: 1px solid rgba(196,120,74,.25);
    padding: .55rem 1rem;
    border-radius: 3px;
  }

  .p-amt {
    font-family: 'Playfair Display', serif;
    font-size: 1.3rem;
    font-weight: 700;
    color: var(--clay);
  }

  .p-unit {
    font-size: .75rem;
    color: rgba(245,240,232,.6);
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    align-items: center;
  }

  /* ── Details Section ── */

  .details-section {
    background: var(--off-white);
    padding: 5.5rem 4rem;
  }

  .section-inner {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 5rem;
    align-items: start;
    max-width: 1200px;
    margin: 0 auto;
  }

  .include-list {
    list-style: none;
    margin-bottom: 2rem;
  }

  .include-list li {
    display: flex;
    gap: 1rem;
    padding: .9rem 0;
    border-bottom: 1px solid var(--stone);
  }

  .include-list li:last-child { border-bottom: none; }

  .check {
    color: var(--clay);
    font-weight: 700;
    font-size: .9rem;
    flex-shrink: 0;
    margin-top: .1rem;
  }

  .include-list strong {
    display: block;
    font-size: .84rem;
    font-weight: 500;
    color: var(--charcoal);
    margin-bottom: .2rem;
  }

  .include-list span {
    font-size: .78rem;
    color: var(--warm-gray);
    line-height: 1.6;
  }

  .not-included {
    font-size: .8rem;
    color: var(--warm-gray);
    padding: 1rem 1.2rem;
    background: rgba(196,120,74,.06);
    border-left: 3px solid var(--clay);
    border-radius: 0 3px 3px 0;
    line-height: 1.65;
  }

  .not-included strong { color: var(--charcoal); }

  .col-aside {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    position: sticky;
    top: 6rem;
  }

  .aside-card {
    background: var(--cream);
    border: 1px solid var(--stone);
    border-radius: 4px;
    padding: 1.4rem;
  }

  .aside-label {
    font-size: .75rem;
    text-transform: uppercase;
    letter-spacing: .13em;
    color: var(--warm-gray);
    margin-bottom: .4rem;
  }

  .aside-value {
    font-family: 'Playfair Display', serif;
    font-size: 1.3rem;
    font-weight: 700;
    color: var(--charcoal);
    margin-bottom: .5rem;
  }

  .aside-card p {
    font-size: .76rem;
    color: var(--warm-gray);
    line-height: 1.65;
  }

  /* ── Process Section ── */

  .process-section {
    background: var(--charcoal);
    padding: 5.5rem 4rem;
  }

  .process-section .stag { color: var(--clay); }
  .process-section h2 { color: var(--cream); }
  .process-section .sdesc { color: rgba(245,240,232,.6); }

  .steps {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5px;
    background: rgba(255,255,255,.07);
    border: 1.5px solid rgba(255,255,255,.07);
  }

  .step {
    background: #211c18;
    padding: 2rem;
    transition: background .25s;
  }

  .step:hover { background: #28211a; }

  .step-num {
    font-family: 'Playfair Display', serif;
    font-size: 2rem;
    font-weight: 900;
    color: rgba(196,120,74,.25);
    line-height: 1;
    margin-bottom: 1rem;
  }

  .step-name {
    font-size: .88rem;
    font-weight: 600;
    color: var(--cream);
    margin-bottom: .5rem;
  }

  .step-desc {
    font-size: .78rem;
    font-weight: 300;
    color: rgba(245,240,232,.6);
    line-height: 1.7;
  }

  /* ── FAQ Section ── */

  .faq-section {
    background: var(--sand);
    padding: 5.5rem 4rem;
  }

  .faq-inner {
    grid-template-columns: 1fr;
    max-width: 820px;
  }

  .faqs {
    display: flex;
    flex-direction: column;
    gap: 0;
    margin-top: .5rem;
  }

  .faq {
    padding: 1.4rem 0;
    border-bottom: 1px solid rgba(196,120,74,.18);
  }

  .faq:first-child { border-top: 1px solid rgba(196,120,74,.18); }

  .faq-q {
    font-size: .9rem;
    font-weight: 600;
    color: var(--charcoal);
    margin-bottom: .55rem;
  }

  .faq-a {
    font-size: .82rem;
    font-weight: 300;
    color: var(--warm-gray);
    line-height: 1.75;
  }

  /* ── Responsive ── */

  @media (max-width: 1100px) {
    .page-hero,
    .details-section,
    .process-section,
    .faq-section {
      padding-left: 2.5rem;
      padding-right: 2.5rem;
    }

    .section-inner {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .col-aside { position: static; }

    .steps { grid-template-columns: repeat(2, 1fr); }
  }

  @media (max-width: 768px) {
    .page-hero,
    .details-section,
    .process-section,
    .faq-section {
      padding: 4rem 1.5rem;
    }

    .page-hero { padding-top: 6rem; }

    .steps { grid-template-columns: 1fr; }
  }
</style>
