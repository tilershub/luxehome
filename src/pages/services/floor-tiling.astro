---
import Layout from '../../layouts/Layout.astro';
import Nav from '../../components/Nav.astro';
import CTA from '../../components/CTA.astro';
import QuoteForm from '../../components/QuoteForm.astro';
import Footer from '../../components/Footer.astro';
---

<Layout
  title="Floor Tiling Services — TILERSHUB Sri Lanka"
  description="Professional floor tiling installation across Sri Lanka. Precision laying for tiles up to 4×2, tile leveling system, 5★ grade materials. From Rs. 350/sq.ft."
>
  <Nav />

  <!-- Page Hero -->
  <section class="page-hero">
    <div class="hero-inner">
      <div class="breadcrumb">
        <a href="/">Home</a>
        <span>›</span>
        <a href="/#services">Services</a>
        <span>›</span>
        <span>Floor Tiling</span>
      </div>
      <div class="hero-icon reveal">
        <svg viewBox="0 0 48 48" fill="none">
          <rect x="4"  y="4"  width="18" height="18" rx="1" fill="#c4784a" opacity=".85"/>
          <rect x="26" y="4"  width="18" height="18" rx="1" fill="#c4784a" opacity=".4"/>
          <rect x="4"  y="26" width="18" height="18" rx="1" fill="#c4784a" opacity=".4"/>
          <rect x="26" y="26" width="18" height="18" rx="1" fill="#c4784a" opacity=".85"/>
        </svg>
      </div>
      <h1 class="reveal">Floor Tiling</h1>
      <p class="hero-desc reveal">
        Precision installation for tiles up to 4×2. Every floor laid with a tile leveling
        system for a perfectly flat, lasting finish — on every job, every time.
      </p>
      <div class="price-tags reveal">
        <div class="price-tag">
          <span class="p-amt">Rs. 350</span>
          <span class="p-unit">/ sq.ft — area</span>
        </div>
        <div class="price-tag">
          <span class="p-amt">Rs. 250</span>
          <span class="p-unit">/ lin.ft — skirting</span>
        </div>
      </div>
      <div class="hero-cta reveal">
        <a href="#get-a-quote" class="btn-primary">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347z"/>
            <path d="M12 0C5.373 0 0 5.373 0 12c0 2.143.566 4.148 1.553 5.887L0 24l6.296-1.529A11.946 11.946 0 0012 24c6.627 0 12-5.373 12-12S18.627 0 12 0zm0 21.818a9.818 9.818 0 01-5.001-1.368l-.36-.213-3.733.906.946-3.643-.234-.374A9.818 9.818 0 1112 21.818z"/>
          </svg>
          Get a Quote
        </a>
        <a href="tel:+94774503744" class="btn-ghost">0774 503 744</a>
      </div>
    </div>
  </section>

  <!-- What's Included -->
  <section class="details-section">
    <div class="section-inner">
      <div class="col-content">
        <div class="stag">What's Covered</div>
        <h2>Everything in the<br />Rs. 350/sq.ft Rate</h2>
        <p class="sdesc">
          One transparent rate covers all labour, preparation, and materials
          needed for a complete, professional installation.
        </p>
        <ul class="include-list">
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Full surface preparation</strong>
              <span>Substrate inspection, cleaning, and leveling compound where needed</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Layout planning & dry run</strong>
              <span>Center lines marked, full dry-lay before any adhesive applied</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Tokyo Super Tile Adhesive</strong>
              <span>Enhanced bonding adhesive — handles all tile types including large format</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Tile Leveling System</strong>
              <span>Every tile clipped and wedged — zero lippage, perfectly flat surface guaranteed</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Precision wet-saw cutting</strong>
              <span>Clean, accurate cuts on borders, obstacles, and pattern work</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Swisstek Grout — colour-consistent joints</strong>
              <span>Stain-resistant, consistent colour grout applied and finished flush</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Skirting installation</strong>
              <span>Skirting tiles or bullnose laid at Rs. 250/lin.ft — included on request</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Site clean-up & final inspection</strong>
              <span>All waste removed, tiles wiped down, and floor handed over ready to walk on</span>
            </div>
          </li>
        </ul>
        <div class="not-included">
          <strong>Not included:</strong> Tiles and tile accessories — you source your preferred tiles from any supplier.
          Demolition of existing flooring is priced separately on request.
        </div>
      </div>
      <div class="col-aside">
        <div class="aside-card">
          <div class="aside-label">Tile Size Capability</div>
          <div class="aside-value">Up to 4ft × 2ft</div>
          <p>We regularly handle large-format tiles. Larger formats require a site consultation.</p>
        </div>
        <div class="aside-card">
          <div class="aside-label">Materials Grade</div>
          <div class="aside-value">5★ Premium</div>
          <p>River Sand · Tokyo Cement · Tokyo Super Tile Adhesive · Tile Leveling System · Swisstek Grout</p>
        </div>
        <div class="aside-card">
          <div class="aside-label">Service Area</div>
          <div class="aside-value">Sri Lanka</div>
          <p>We travel across Sri Lanka for all project sizes. WhatsApp us to confirm availability in your area.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Process -->
  <section class="process-section">
    <div class="section-inner">
      <div class="stag">How It Works</div>
      <h2>Our Installation Process</h2>
      <p class="sdesc">
        A structured process that ensures every floor we lay is level, lasting, and finished to the highest standard.
      </p>
      <div class="steps">
        <div class="step reveal">
          <div class="step-num">01</div>
          <div class="step-content">
            <div class="step-name">Site Assessment</div>
            <div class="step-desc">We visit to measure the area, inspect the substrate condition, discuss tile layout and pattern preferences, and confirm the scope.</div>
          </div>
        </div>
        <div class="step reveal">
          <div class="step-num">02</div>
          <div class="step-content">
            <div class="step-name">Surface Preparation</div>
            <div class="step-desc">Existing surface is cleaned, any high spots ground down, low spots filled with leveling compound, and substrate primed for adhesive.</div>
          </div>
        </div>
        <div class="step reveal">
          <div class="step-num">03</div>
          <div class="step-content">
            <div class="step-name">Layout & Dry Run</div>
            <div class="step-desc">Center lines set, tiles laid out dry to confirm the pattern and minimise cuts at borders. Any adjustments agreed before work begins.</div>
          </div>
        </div>
        <div class="step reveal">
          <div class="step-num">04</div>
          <div class="step-content">
            <div class="step-name">Tile Installation</div>
            <div class="step-desc">Adhesive applied in sections, tiles set with tile leveling clips and wedges for zero lippage. Border tiles cut precisely with wet saw.</div>
          </div>
        </div>
        <div class="step reveal">
          <div class="step-num">05</div>
          <div class="step-content">
            <div class="step-name">Grouting & Sealing</div>
            <div class="step-desc">Once adhesive has cured, leveling clips removed, Swisstek grout applied and finished flush. Joints cleaned and sealed where specified.</div>
          </div>
        </div>
        <div class="step reveal">
          <div class="step-num">06</div>
          <div class="step-content">
            <div class="step-name">Clean-up & Handover</div>
            <div class="step-desc">All waste and materials removed from site, tiles wiped clean, and the finished floor inspected with you before we leave.</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="faq-section">
    <div class="section-inner faq-inner">
      <div class="stag">Common Questions</div>
      <h2>Floor Tiling FAQ</h2>
      <div class="faqs">
        <div class="faq reveal">
          <div class="faq-q">Do you supply the tiles?</div>
          <div class="faq-a">No — you source tiles from any supplier you prefer. Our rate covers all labour, adhesive, leveling system, and grout. This way you stay in full control of your tile choice and budget.</div>
        </div>
        <div class="faq reveal">
          <div class="faq-q">What's the maximum tile size you can handle?</div>
          <div class="faq-a">We regularly install tiles up to 4ft × 2ft (1200mm × 600mm). Larger format slabs such as 1200×1200mm require a site consultation — contact us to discuss.</div>
        </div>
        <div class="faq reveal">
          <div class="faq-q">Is skirting included in the floor rate?</div>
          <div class="faq-a">Skirting is priced separately at Rs. 250 per linear foot. It covers installation of skirting tiles or bullnose around the perimeter of the room.</div>
        </div>
        <div class="faq reveal">
          <div class="faq-q">What if my floor is uneven?</div>
          <div class="faq-a">Minor unevenness is addressed during surface preparation at no extra charge. Significant level differences — such as a floor that needs a full screed — are scoped and priced separately after the site visit.</div>
        </div>
        <div class="faq reveal">
          <div class="faq-q">How soon can we walk on the floor?</div>
          <div class="faq-a">Light foot traffic is usually safe after 24 hours. We recommend waiting 48–72 hours before moving furniture back in, and 7 days before heavy loads, to allow the adhesive to fully cure.</div>
        </div>
        <div class="faq reveal">
          <div class="faq-q">Do you remove old flooring first?</div>
          <div class="faq-a">Demolition of existing flooring is not included in the tiling rate but can be arranged. WhatsApp us with details of your existing floor for a separate demolition price.</div>
        </div>
      </div>
    </div>
  </section>

  <QuoteForm phone="94774503744" service="Floor Tiling" />
  <CTA />
  <Footer />
</Layout>

<style>
  /* ── Page Hero ── */

  .page-hero {
    background: var(--charcoal);
    padding: 7rem 4rem 5.5rem;
    position: relative;
    overflow: hidden;
  }

  .page-hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background:
      repeating-linear-gradient(0deg, transparent, transparent 60px, rgba(255,255,255,.01) 60px, rgba(255,255,255,.01) 61px),
      repeating-linear-gradient(90deg, transparent, transparent 60px, rgba(255,255,255,.01) 60px, rgba(255,255,255,.01) 61px);
  }

  .hero-inner {
    position: relative;
    z-index: 1;
    max-width: 760px;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: .5rem;
    font-size: .75rem;
    color: rgba(245,240,232,.6);
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .breadcrumb a {
    color: rgba(245,240,232,.6);
    text-decoration: none;
    transition: color .2s;
  }

  .breadcrumb a:hover { color: var(--clay); }

  .hero-icon {
    width: 3.2rem;
    height: 3.2rem;
    margin-bottom: 1.4rem;
  }

  h1 {
    font-family: 'Playfair Display', serif;
    font-size: clamp(2.2rem, 4vw, 3.5rem);
    font-weight: 700;
    color: var(--cream);
    line-height: 1.1;
    letter-spacing: -.02em;
    margin-bottom: 1rem;
  }

  .hero-desc {
    font-size: .96rem;
    font-weight: 300;
    color: rgba(245,240,232,.7);
    line-height: 1.75;
    max-width: 58ch;
    margin-bottom: 1.8rem;
  }

  .price-tags {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 2.2rem;
  }

  .price-tag {
    display: flex;
    align-items: baseline;
    gap: .4rem;
    background: rgba(196,120,74,.1);
    border: 1px solid rgba(196,120,74,.25);
    padding: .55rem 1rem;
    border-radius: 3px;
  }

  .p-amt {
    font-family: 'Playfair Display', serif;
    font-size: 1.3rem;
    font-weight: 700;
    color: var(--clay);
  }

  .p-unit {
    font-size: .75rem;
    color: rgba(245,240,232,.6);
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    align-items: center;
  }

  /* ── Details Section ── */

  .details-section {
    background: var(--off-white);
    padding: 5.5rem 4rem;
  }

  .section-inner {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 5rem;
    align-items: start;
    max-width: 1200px;
    margin: 0 auto;
  }

  .include-list {
    list-style: none;
    margin-bottom: 2rem;
  }

  .include-list li {
    display: flex;
    gap: 1rem;
    padding: .9rem 0;
    border-bottom: 1px solid var(--stone);
  }

  .include-list li:last-child {
    border-bottom: none;
  }

  .check {
    color: var(--clay);
    font-weight: 700;
    font-size: .9rem;
    flex-shrink: 0;
    margin-top: .1rem;
  }

  .include-list strong {
    display: block;
    font-size: .84rem;
    font-weight: 500;
    color: var(--charcoal);
    margin-bottom: .2rem;
  }

  .include-list span {
    font-size: .78rem;
    color: var(--warm-gray);
    line-height: 1.6;
  }

  .not-included {
    font-size: .8rem;
    color: var(--warm-gray);
    padding: 1rem 1.2rem;
    background: rgba(196,120,74,.06);
    border-left: 3px solid var(--clay);
    border-radius: 0 3px 3px 0;
    line-height: 1.65;
  }

  .not-included strong {
    color: var(--charcoal);
  }

  /* ── Aside Cards ── */

  .col-aside {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    position: sticky;
    top: 6rem;
  }

  .aside-card {
    background: var(--cream);
    border: 1px solid var(--stone);
    border-radius: 4px;
    padding: 1.4rem;
  }

  .aside-label {
    font-size: .75rem;
    text-transform: uppercase;
    letter-spacing: .13em;
    color: var(--warm-gray);
    margin-bottom: .4rem;
  }

  .aside-value {
    font-family: 'Playfair Display', serif;
    font-size: 1.3rem;
    font-weight: 700;
    color: var(--charcoal);
    margin-bottom: .5rem;
  }

  .aside-card p {
    font-size: .76rem;
    color: var(--warm-gray);
    line-height: 1.65;
  }

  /* ── Process Section ── */

  .process-section {
    background: var(--charcoal);
    padding: 5.5rem 4rem;
  }

  .process-section .stag { color: var(--clay); }

  .process-section h2 { color: var(--cream); }

  .process-section .sdesc { color: rgba(245,240,232,.6); }

  .steps {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5px;
    background: rgba(255,255,255,.07);
    border: 1.5px solid rgba(255,255,255,.07);
  }

  .step {
    background: #211c18;
    padding: 2rem;
    transition: background .25s;
  }

  .step:hover { background: #28211a; }

  .step-num {
    font-family: 'Playfair Display', serif;
    font-size: 2rem;
    font-weight: 900;
    color: rgba(196,120,74,.25);
    line-height: 1;
    margin-bottom: 1rem;
  }

  .step-name {
    font-size: .88rem;
    font-weight: 600;
    color: var(--cream);
    margin-bottom: .5rem;
  }

  .step-desc {
    font-size: .78rem;
    font-weight: 300;
    color: rgba(245,240,232,.6);
    line-height: 1.7;
  }

  /* ── FAQ Section ── */

  .faq-section {
    background: var(--sand);
    padding: 5.5rem 4rem;
  }

  .faq-inner {
    grid-template-columns: 1fr;
    max-width: 820px;
  }

  .faqs {
    display: flex;
    flex-direction: column;
    gap: 0;
    margin-top: .5rem;
  }

  .faq {
    padding: 1.4rem 0;
    border-bottom: 1px solid rgba(196,120,74,.18);
  }

  .faq:first-child { border-top: 1px solid rgba(196,120,74,.18); }

  .faq-q {
    font-size: .9rem;
    font-weight: 600;
    color: var(--charcoal);
    margin-bottom: .55rem;
  }

  .faq-a {
    font-size: .82rem;
    font-weight: 300;
    color: var(--warm-gray);
    line-height: 1.75;
  }

  /* ── Responsive ── */

  @media (max-width: 1100px) {
    .page-hero,
    .details-section,
    .process-section,
    .faq-section {
      padding-left: 2.5rem;
      padding-right: 2.5rem;
    }

    .section-inner {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .col-aside { position: static; }

    .steps { grid-template-columns: repeat(2, 1fr); }
  }

  @media (max-width: 768px) {
    .page-hero,
    .details-section,
    .process-section,
    .faq-section {
      padding: 4rem 1.5rem;
    }

    .page-hero { padding-top: 6rem; }

    .steps { grid-template-columns: 1fr; }

    .price-tags { flex-direction: column; }
  }
</style>
