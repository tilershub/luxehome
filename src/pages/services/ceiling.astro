---
import Layout from '../../layouts/Layout.astro';
import Nav from '../../components/Nav.astro';
import CTA from '../../components/CTA.astro';
import Footer from '../../components/Footer.astro';
---

<Layout
  title="iPanel Ceiling Services — TILERSHUB Sri Lanka"
  description="Professional iPanel PVC ceiling installation across Sri Lanka. Plain finish at Rs. 400/sq.ft, decorative design panels at Rs. 500/sq.ft. Clean, moisture-resistant, and lasting."
>
  <Nav />

  <!-- Page Hero -->
  <section class="page-hero">
    <div class="hero-inner">
      <div class="breadcrumb">
        <a href="/">Home</a>
        <span>›</span>
        <a href="/#services">Services</a>
        <span>›</span>
        <span>iPanel Ceiling</span>
      </div>
      <div class="hero-icon reveal">
        <svg viewBox="0 0 48 48" fill="none">
          <rect x="4"  y="8"  width="40" height="6" rx="1" fill="#c4784a" opacity=".85"/>
          <rect x="4"  y="18" width="18" height="4" rx="1" fill="#c4784a" opacity=".38"/>
          <rect x="26" y="18" width="18" height="4" rx="1" fill="#c4784a" opacity=".38"/>
          <rect x="4"  y="26" width="18" height="4" rx="1" fill="#c4784a" opacity=".22"/>
          <rect x="26" y="26" width="18" height="4" rx="1" fill="#c4784a" opacity=".22"/>
          <rect x="4"  y="34" width="18" height="4" rx="1" fill="#c4784a" opacity=".12"/>
          <rect x="26" y="34" width="18" height="4" rx="1" fill="#c4784a" opacity=".12"/>
        </svg>
      </div>
      <h1 class="reveal">iPanel Ceiling</h1>
      <p class="hero-desc reveal">
        PVC iPanel ceiling installation for any room — moisture-resistant, easy to
        maintain, and finished cleanly in plain or decorative designs.
      </p>
      <div class="price-tags reveal">
        <div class="price-tag">
          <span class="p-amt">Rs. 400</span>
          <span class="p-unit">/ sq.ft — plain</span>
        </div>
        <div class="price-tag">
          <span class="p-amt">Rs. 500</span>
          <span class="p-unit">/ sq.ft — design</span>
        </div>
      </div>
      <div class="hero-cta reveal">
        <a href="https://wa.me/94774503744?text=Hello%2C%20I%20would%20like%20an%20iPanel%20ceiling%20quote." class="btn-primary">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347z"/>
            <path d="M12 0C5.373 0 0 5.373 0 12c0 2.143.566 4.148 1.553 5.887L0 24l6.296-1.529A11.946 11.946 0 0012 24c6.627 0 12-5.373 12-12S18.627 0 12 0zm0 21.818a9.818 9.818 0 01-5.001-1.368l-.36-.213-3.733.906.946-3.643-.234-.374A9.818 9.818 0 1112 21.818z"/>
          </svg>
          Get a Quote
        </a>
        <a href="tel:+94774503744" class="btn-ghost">0774 503 744</a>
      </div>
    </div>
  </section>

  <!-- Pricing Options -->
  <section class="options-section">
    <div class="options-inner">
      <div class="stag reveal">Pricing Options</div>
      <h2 class="reveal">Two Finish Options</h2>
      <p class="sdesc reveal">
        Choose the finish that suits your space — both options use the same quality
        iPanel PVC system with full installation included.
      </p>
      <div class="option-cards reveal">
        <div class="option-card">
          <div class="oc-label">Plain</div>
          <div class="oc-price">Rs. 400</div>
          <div class="oc-unit">per sq.ft</div>
          <p class="oc-desc">
            Solid-colour PVC panels in white or available tones. Clean, uniform finish
            that works in any room — living areas, bedrooms, kitchens, offices.
          </p>
          <ul class="oc-list">
            <li>Uniform solid colour finish</li>
            <li>White and standard colour range</li>
            <li>Suited to all room types</li>
            <li>Easy to clean and maintain</li>
          </ul>
          <a href="https://wa.me/94774503744?text=Hello%2C%20I%20would%20like%20a%20plain%20iPanel%20ceiling%20quote." class="oc-cta">Get Plain Ceiling Quote →</a>
        </div>
        <div class="option-card featured">
          <div class="oc-label">Design</div>
          <div class="oc-price">Rs. 500</div>
          <div class="oc-unit">per sq.ft</div>
          <p class="oc-desc">
            Decorative patterned or textured panels — wood-look, geometric, 3D-effect,
            and more. Adds character to living rooms, master bedrooms, and feature areas.
          </p>
          <ul class="oc-list">
            <li>Decorative pattern and texture range</li>
            <li>Wood-look, geometric, relief designs</li>
            <li>Ideal for feature rooms and living areas</li>
            <li>Same durability as plain panels</li>
          </ul>
          <a href="https://wa.me/94774503744?text=Hello%2C%20I%20would%20like%20a%20design%20iPanel%20ceiling%20quote." class="oc-cta">Get Design Ceiling Quote →</a>
        </div>
      </div>
    </div>
  </section>

  <!-- What's Included -->
  <section class="details-section">
    <div class="section-inner">
      <div class="col-content">
        <div class="stag">What's Covered</div>
        <h2>Everything in the Rate</h2>
        <p class="sdesc">
          One transparent sq.ft rate — all labour and materials for a complete,
          cleanly-finished ceiling installation.
        </p>
        <ul class="include-list">
          <li>
            <span class="check">✓</span>
            <div>
              <strong>iPanel PVC panels — supplied and fitted</strong>
              <span>Panels included in the rate — you choose the finish (plain or design)</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Ceiling frame and battens</strong>
              <span>Full aluminium or timber frame structure installed as required for a level ceiling</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Panel installation</strong>
              <span>Panels clipped and fitted flush — all joints aligned and panel direction planned</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Perimeter trim & cornice</strong>
              <span>Clean edge trim fitted at all wall junctions for a finished, professional look</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Light fitting cut-outs</strong>
              <span>Cut-outs for existing or supplied light fittings — precise, clean cuts throughout</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Exhaust fan cut-outs</strong>
              <span>Openings for bathroom or kitchen exhaust fans cut and fitted cleanly</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Site clean-up & handover</strong>
              <span>All off-cuts and packaging removed, ceiling wiped down and handed over ready</span>
            </div>
          </li>
        </ul>
        <div class="not-included">
          <strong>Not included:</strong> Light fittings and exhaust fans (supply only — installation of electrics is a separate trade).
          Suspended or coffered ceilings with complex level changes require a site consultation and separate quote.
        </div>
      </div>
      <div class="col-aside">
        <div class="aside-card">
          <div class="aside-label">Material</div>
          <div class="aside-value">iPanel PVC</div>
          <p>Moisture-resistant PVC panels — ideal for Sri Lanka's humid climate. Will not warp, sag, or mould.</p>
        </div>
        <div class="aside-card">
          <div class="aside-label">Best For</div>
          <div class="aside-value">Any Room</div>
          <p>Living rooms, bedrooms, bathrooms, kitchens, offices — iPanel works anywhere a clean ceiling is needed.</p>
        </div>
        <div class="aside-card">
          <div class="aside-label">Service Area</div>
          <div class="aside-value">Sri Lanka</div>
          <p>We cover all areas across Sri Lanka. WhatsApp us to confirm availability for your location.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Process -->
  <section class="process-section">
    <div class="section-inner">
      <div class="stag">How It Works</div>
      <h2>Our Ceiling Process</h2>
      <p class="sdesc">
        A straightforward process from measurement to a fully-finished ceiling — usually completed in a single day for most rooms.
      </p>
      <div class="steps">
        <div class="step reveal">
          <div class="step-num">01</div>
          <div class="step-content">
            <div class="step-name">Site Assessment</div>
            <div class="step-desc">We measure the ceiling area, check existing conditions (existing ceiling height, any electrical points), and confirm panel direction and finish.</div>
          </div>
        </div>
        <div class="step reveal">
          <div class="step-num">02</div>
          <div class="step-content">
            <div class="step-name">Frame Installation</div>
            <div class="step-desc">Aluminium or timber battens fixed to the existing ceiling or walls at the correct level — ensuring the new ceiling hangs perfectly flat.</div>
          </div>
        </div>
        <div class="step reveal">
          <div class="step-num">03</div>
          <div class="step-content">
            <div class="step-name">Panel Fitting</div>
            <div class="step-desc">iPanel panels clicked in sequence, direction planned for the room, cut at edges using a straight-edge cut for clean perimeter lines.</div>
          </div>
        </div>
        <div class="step reveal">
          <div class="step-num">04</div>
          <div class="step-content">
            <div class="step-name">Cut-outs</div>
            <div class="step-desc">Precise cut-outs made for light points and exhaust fans — clean edges, correctly sized for your fittings.</div>
          </div>
        </div>
        <div class="step reveal">
          <div class="step-num">05</div>
          <div class="step-content">
            <div class="step-name">Trim & Cornice</div>
            <div class="step-desc">Perimeter trim applied at all wall junctions, concealing any panel edges for a fully finished, professional result.</div>
          </div>
        </div>
        <div class="step reveal">
          <div class="step-num">06</div>
          <div class="step-content">
            <div class="step-name">Clean-up & Handover</div>
            <div class="step-desc">All waste material removed, ceiling wiped down, and the room handed back to you — ready for painting (if required) or immediate use.</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="faq-section">
    <div class="faq-inner">
      <div class="stag">Common Questions</div>
      <h2>Ceiling FAQ</h2>
      <div class="faqs">
        <div class="faq reveal">
          <div class="faq-q">What is iPanel and why is it good in Sri Lanka?</div>
          <div class="faq-a">iPanel is a PVC tongue-and-groove ceiling panel system. It's moisture-resistant, termite-proof, and will not warp, sag, or discolour — making it well-suited to Sri Lanka's humid climate. It also cleans easily with a damp cloth.</div>
        </div>
        <div class="faq reveal">
          <div class="faq-q">Are the panels included in the price?</div>
          <div class="faq-a">Yes — the panels are included in the Rs. 400/sq.ft (plain) and Rs. 500/sq.ft (design) rates. You choose the finish; we supply and fit everything.</div>
        </div>
        <div class="faq reveal">
          <div class="faq-q">Can you install over an existing ceiling?</div>
          <div class="faq-a">In most cases yes — we can fit the iPanel system below an existing concrete or board ceiling without demolition, provided there is adequate clearance. We confirm this on the site visit.</div>
        </div>
        <div class="faq reveal">
          <div class="faq-q">What about electrical wiring for lights?</div>
          <div class="faq-a">We make clean cut-outs for your light fittings. The electrical wiring and light fitting installation itself is a separate trade — we recommend completing the electrical rough-in before the ceiling goes up.</div>
        </div>
        <div class="faq reveal">
          <div class="faq-q">How is the area measured for pricing?</div>
          <div class="faq-a">We measure the net ceiling area in square feet — length × width of the room. The rate applies to the measured area. WhatsApp us your room dimensions for an instant estimate.</div>
        </div>
      </div>
    </div>
  </section>

  <CTA />
  <Footer />
</Layout>

<style>
  .page-hero {
    background: var(--charcoal);
    padding: 7rem 4rem 5.5rem;
    position: relative;
    overflow: hidden;
  }

  .page-hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background:
      repeating-linear-gradient(0deg, transparent, transparent 60px, rgba(255,255,255,.01) 60px, rgba(255,255,255,.01) 61px),
      repeating-linear-gradient(90deg, transparent, transparent 60px, rgba(255,255,255,.01) 60px, rgba(255,255,255,.01) 61px);
  }

  .hero-inner {
    position: relative;
    z-index: 1;
    max-width: 760px;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: .5rem;
    font-size: .75rem;
    color: rgba(245,240,232,.6);
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .breadcrumb a {
    color: rgba(245,240,232,.6);
    text-decoration: none;
    transition: color .2s;
  }

  .breadcrumb a:hover { color: var(--clay); }

  .hero-icon {
    width: 3.2rem;
    height: 3.2rem;
    margin-bottom: 1.4rem;
  }

  h1 {
    font-family: 'Playfair Display', serif;
    font-size: clamp(2.2rem, 4vw, 3.5rem);
    font-weight: 700;
    color: var(--cream);
    line-height: 1.1;
    letter-spacing: -.02em;
    margin-bottom: 1rem;
  }

  .hero-desc {
    font-size: .96rem;
    font-weight: 300;
    color: rgba(245,240,232,.7);
    line-height: 1.75;
    max-width: 58ch;
    margin-bottom: 1.8rem;
  }

  .price-tags {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 2.2rem;
  }

  .price-tag {
    display: flex;
    align-items: baseline;
    gap: .4rem;
    background: rgba(196,120,74,.1);
    border: 1px solid rgba(196,120,74,.25);
    padding: .55rem 1rem;
    border-radius: 3px;
  }

  .p-amt {
    font-family: 'Playfair Display', serif;
    font-size: 1.3rem;
    font-weight: 700;
    color: var(--clay);
  }

  .p-unit {
    font-size: .75rem;
    color: rgba(245,240,232,.6);
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    align-items: center;
  }

  /* ── Options Section ── */

  .options-section {
    background: var(--sand);
    padding: 5.5rem 4rem;
  }

  .options-inner {
    max-width: 1200px;
    margin: 0 auto;
  }

  .option-cards {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5px;
    background: var(--stone);
    border: 1.5px solid var(--stone);
    margin-top: .5rem;
  }

  .option-card {
    background: rgba(255,255,255,.55);
    padding: 2.5rem;
  }

  .option-card.featured {
    background: rgba(255,255,255,.82);
  }

  .oc-label {
    font-size: .75rem;
    text-transform: uppercase;
    letter-spacing: .15em;
    color: var(--clay);
    font-weight: 500;
    margin-bottom: .5rem;
  }

  .oc-price {
    font-family: 'Playfair Display', serif;
    font-size: 2.6rem;
    font-weight: 900;
    color: var(--charcoal);
    line-height: 1;
  }

  .oc-unit {
    font-size: .75rem;
    color: var(--warm-gray);
    margin-top: .3rem;
    margin-bottom: 1rem;
  }

  .oc-desc {
    font-size: .82rem;
    color: var(--warm-gray);
    line-height: 1.7;
    margin-bottom: 1.2rem;
    max-width: 46ch;
  }

  .oc-list {
    list-style: none;
    margin-bottom: 1.8rem;
  }

  .oc-list li {
    font-size: .78rem;
    color: var(--warm-gray);
    padding: .4rem 0;
    border-bottom: 1px solid rgba(196,120,74,.12);
    display: flex;
    align-items: center;
    gap: .6rem;
  }

  .oc-list li::before {
    content: '✓';
    color: var(--clay);
    font-weight: 700;
    font-size: .8rem;
    flex-shrink: 0;
  }

  .oc-cta {
    display: inline-block;
    font-size: .78rem;
    font-weight: 500;
    color: var(--clay);
    text-decoration: none;
    border-bottom: 1.5px solid rgba(196,120,74,.3);
    padding-bottom: .15rem;
    transition: border-color .2s;
  }

  .oc-cta:hover { border-color: var(--clay); }

  /* ── Details Section ── */

  .details-section {
    background: var(--off-white);
    padding: 5.5rem 4rem;
  }

  .section-inner {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 5rem;
    align-items: start;
    max-width: 1200px;
    margin: 0 auto;
  }

  .include-list {
    list-style: none;
    margin-bottom: 2rem;
  }

  .include-list li {
    display: flex;
    gap: 1rem;
    padding: .9rem 0;
    border-bottom: 1px solid var(--stone);
  }

  .include-list li:last-child { border-bottom: none; }

  .check {
    color: var(--clay);
    font-weight: 700;
    font-size: .9rem;
    flex-shrink: 0;
    margin-top: .1rem;
  }

  .include-list strong {
    display: block;
    font-size: .84rem;
    font-weight: 500;
    color: var(--charcoal);
    margin-bottom: .2rem;
  }

  .include-list span {
    font-size: .78rem;
    color: var(--warm-gray);
    line-height: 1.6;
  }

  .not-included {
    font-size: .8rem;
    color: var(--warm-gray);
    padding: 1rem 1.2rem;
    background: rgba(196,120,74,.06);
    border-left: 3px solid var(--clay);
    border-radius: 0 3px 3px 0;
    line-height: 1.65;
  }

  .not-included strong { color: var(--charcoal); }

  .col-aside {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    position: sticky;
    top: 6rem;
  }

  .aside-card {
    background: var(--cream);
    border: 1px solid var(--stone);
    border-radius: 4px;
    padding: 1.4rem;
  }

  .aside-label {
    font-size: .75rem;
    text-transform: uppercase;
    letter-spacing: .13em;
    color: var(--warm-gray);
    margin-bottom: .4rem;
  }

  .aside-value {
    font-family: 'Playfair Display', serif;
    font-size: 1.3rem;
    font-weight: 700;
    color: var(--charcoal);
    margin-bottom: .5rem;
  }

  .aside-card p {
    font-size: .76rem;
    color: var(--warm-gray);
    line-height: 1.65;
  }

  /* ── Process Section ── */

  .process-section {
    background: var(--charcoal);
    padding: 5.5rem 4rem;
  }

  .process-section .stag { color: var(--clay); }
  .process-section h2 { color: var(--cream); }
  .process-section .sdesc { color: rgba(245,240,232,.6); }

  .steps {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5px;
    background: rgba(255,255,255,.07);
    border: 1.5px solid rgba(255,255,255,.07);
  }

  .step {
    background: #211c18;
    padding: 2rem;
    transition: background .25s;
  }

  .step:hover { background: #28211a; }

  .step-num {
    font-family: 'Playfair Display', serif;
    font-size: 2rem;
    font-weight: 900;
    color: rgba(196,120,74,.25);
    line-height: 1;
    margin-bottom: 1rem;
  }

  .step-name {
    font-size: .88rem;
    font-weight: 600;
    color: var(--cream);
    margin-bottom: .5rem;
  }

  .step-desc {
    font-size: .78rem;
    font-weight: 300;
    color: rgba(245,240,232,.6);
    line-height: 1.7;
  }

  /* ── FAQ Section ── */

  .faq-section {
    background: var(--sand);
    padding: 5.5rem 4rem;
  }

  .faq-inner {
    max-width: 820px;
    margin: 0 auto;
  }

  .faqs {
    display: flex;
    flex-direction: column;
    gap: 0;
    margin-top: .5rem;
  }

  .faq {
    padding: 1.4rem 0;
    border-bottom: 1px solid rgba(196,120,74,.18);
  }

  .faq:first-child { border-top: 1px solid rgba(196,120,74,.18); }

  .faq-q {
    font-size: .9rem;
    font-weight: 600;
    color: var(--charcoal);
    margin-bottom: .55rem;
  }

  .faq-a {
    font-size: .82rem;
    font-weight: 300;
    color: var(--warm-gray);
    line-height: 1.75;
  }

  /* ── Responsive ── */

  @media (max-width: 1100px) {
    .page-hero,
    .options-section,
    .details-section,
    .process-section,
    .faq-section {
      padding-left: 2.5rem;
      padding-right: 2.5rem;
    }

    .section-inner {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .col-aside { position: static; }

    .steps { grid-template-columns: repeat(2, 1fr); }
  }

  @media (max-width: 768px) {
    .page-hero,
    .options-section,
    .details-section,
    .process-section,
    .faq-section {
      padding: 4rem 1.5rem;
    }

    .page-hero { padding-top: 6rem; }

    .option-cards { grid-template-columns: 1fr; }

    .steps { grid-template-columns: 1fr; }
  }
</style>
