---
import Layout from '../../layouts/Layout.astro';
import Nav from '../../components/Nav.astro';
import CTA from '../../components/CTA.astro';
import QuoteForm from '../../components/QuoteForm.astro';
import Footer from '../../components/Footer.astro';
---

<Layout
  title="Hand Railing — Glass & Stainless Steel Balustrade — TILERSHUB Sri Lanka"
  description="Professional hand railing installation across Sri Lanka. Frameless glass balustrade with stainless steel posts and top rail for staircases, balconies, and terraces. From Rs. 12,500 per lin.ft."
>
  <Nav />

  <!-- Page Hero -->
  <section class="page-hero">
    <div class="hero-inner">
      <div class="breadcrumb">
        <a href="/">Home</a>
        <span>›</span>
        <a href="/#services">Services</a>
        <span>›</span>
        <span>Hand Railing</span>
      </div>
      <div class="hero-icon reveal">
        <svg viewBox="0 0 48 48" fill="none">
          <rect x="4"  y="10" width="40" height="4" rx="2" fill="#c4784a" opacity=".85"/>
          <rect x="10" y="14" width="4"  height="24" rx="1" fill="#c4784a" opacity=".5"/>
          <rect x="22" y="14" width="4"  height="24" rx="1" fill="#c4784a" opacity=".5"/>
          <rect x="34" y="14" width="4"  height="24" rx="1" fill="#c4784a" opacity=".5"/>
          <rect x="6"  y="36" width="36" height="4" rx="1" fill="#c4784a" opacity=".2"/>
        </svg>
      </div>
      <h1 class="reveal">Hand Railing</h1>
      <p class="hero-desc reveal">
        Frameless glass balustrade with stainless steel posts and top rail —
        clean and contemporary for staircases, balconies, and terraces.
        Precision-fitted and weatherproof, professionally installed throughout Sri Lanka.
      </p>
      <div class="hero-start reveal">
        <div class="hs-item">
          <span class="hs-label">Starting from</span>
          <span class="hs-price">Rs. 12,500</span>
        </div>
        <div class="hs-divider"></div>
        <div class="hs-item">
          <span class="hs-label">Priced per</span>
          <span class="hs-price">Linear ft</span>
        </div>
      </div>
      <div class="hero-cta reveal">
        <a href="https://wa.me/94710111506?text=Hello%2C%20I%20would%20like%20a%20hand%20railing%20quote." class="btn-primary">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347z"/>
            <path d="M12 0C5.373 0 0 5.373 0 12c0 2.143.566 4.148 1.553 5.887L0 24l6.296-1.529A11.946 11.946 0 0012 24c6.627 0 12-5.373 12-12S18.627 0 12 0zm0 21.818a9.818 9.818 0 01-5.001-1.368l-.36-.213-3.733.906.946-3.643-.234-.374A9.818 9.818 0 1112 21.818z"/>
          </svg>
          Get a Quote
        </a>
        <a href="tel:+94710111506" class="btn-ghost">0710 111 506</a>
      </div>
    </div>
  </section>

  <!-- Railing Types -->
  <section class="rail-section">
    <div class="rail-inner">
      <div class="stag reveal">Types</div>
      <h2 class="reveal">Staircase & Balcony Railing</h2>
      <p class="sdesc reveal">
        Frameless glass balustrade with stainless steel posts and top rail —
        clean and contemporary for staircases, balconies, and terraces.
      </p>
      <div class="rail-grid reveal">

        <div class="rail-card">
          <div class="rc-top">
            <div class="rc-icon">
              <svg viewBox="0 0 56 56" fill="none">
                <rect x="4"  y="44" width="48" height="6" rx="1" fill="#c4784a" opacity=".7"/>
                <rect x="4"  y="36" width="36" height="6" rx="1" fill="#c4784a" opacity=".5"/>
                <rect x="4"  y="28" width="24" height="6" rx="1" fill="#c4784a" opacity=".3"/>
                <rect x="4"  y="20" width="12" height="6" rx="1" fill="#c4784a" opacity=".18"/>
                <line x1="8"  y1="20" x2="48" y2="44" stroke="#c4784a" stroke-width="2.5" opacity=".65"/>
              </svg>
            </div>
            <div>
              <div class="rc-name">Staircase Hand Railing</div>
              <div class="rc-price">Rs. 12,500 <span>onwards / lin.ft</span></div>
            </div>
          </div>
          <p class="rc-desc">
            Glass balustrade panels with stainless steel posts and top rail, following
            the staircase rake. Complements tiled staircases and open-plan interiors.
          </p>
          <ul class="rc-list">
            <li>Tempered safety glass panels</li>
            <li>Stainless steel posts and top rail</li>
            <li>Fitted to match staircase angle</li>
            <li>Complies with standard railing heights</li>
          </ul>
          <a href="https://wa.me/94710111506?text=Hello%2C%20I%20would%20like%20a%20staircase%20hand%20railing%20quote." class="rc-cta">Get Staircase Railing Quote →</a>
        </div>

        <div class="rail-card">
          <div class="rc-top">
            <div class="rc-icon">
              <svg viewBox="0 0 56 56" fill="none">
                <rect x="4" y="42" width="48" height="5" rx="1" fill="#c4784a" opacity=".6"/>
                <rect x="10" y="18" width="3" height="24" rx="1" fill="#c4784a" opacity=".5"/>
                <rect x="26" y="18" width="3" height="24" rx="1" fill="#c4784a" opacity=".5"/>
                <rect x="43" y="18" width="3" height="24" rx="1" fill="#c4784a" opacity=".5"/>
                <rect x="7" y="14" width="42" height="4" rx="1" fill="#c4784a" opacity=".7"/>
                <rect x="13" y="18" width="13" height="24" rx="0" fill="#c4784a" opacity=".07"/>
                <rect x="29" y="18" width="14" height="24" rx="0" fill="#c4784a" opacity=".07"/>
              </svg>
            </div>
            <div>
              <div class="rc-name">Balcony / Terrace Hand Railing</div>
              <div class="rc-price">Rs. 12,500 <span>onwards / lin.ft</span></div>
            </div>
          </div>
          <p class="rc-desc">
            Level glass balustrade for balconies and terraces — preserves the view
            while providing a secure, code-compliant barrier.
          </p>
          <ul class="rc-list">
            <li>Tempered safety glass panels</li>
            <li>Stainless steel posts and top rail</li>
            <li>Level installation for flat surfaces</li>
            <li>Weatherproof hardware for outdoor use</li>
          </ul>
          <a href="https://wa.me/94710111506?text=Hello%2C%20I%20would%20like%20a%20balcony%20hand%20railing%20quote." class="rc-cta">Get Balcony Railing Quote →</a>
        </div>

      </div>
    </div>
  </section>

  <!-- What's Included -->
  <section class="details-section">
    <div class="section-inner">
      <div class="col-content">
        <div class="stag">What's Covered</div>
        <h2>Included on Every<br />Railing Installation</h2>
        <p class="sdesc">
          Every hand railing installation comes with these standards as part of the price —
          no hidden extras.
        </p>
        <ul class="include-list">
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Tempered safety glass</strong>
              <span>All panels are toughened tempered glass — shatters safely if broken</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Grade stainless steel</strong>
              <span>Posts, top rail, and all fittings in grade stainless — rust-resistant in Sri Lanka's humidity</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Site measurement & planning</strong>
              <span>We measure on site and plan post spacing and configuration before fabrication</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Professional installation</strong>
              <span>All fixing, drilling, and alignment done by our experienced installation team</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Angle matching (staircase)</strong>
              <span>Staircase railing posts and rail are fitted to follow the exact staircase rake</span>
            </div>
          </li>
          <li>
            <span class="check">✓</span>
            <div>
              <strong>Level and alignment checks</strong>
              <span>Every post and panel checked plumb and level before sign-off — no shortcuts</span>
            </div>
          </li>
        </ul>
        <div class="not-included">
          <strong>Final pricing depends on:</strong> Linear footage, post spacing, glass panel size, and installation surface.
          All quotes are issued after a site measurement — WhatsApp us to arrange.
        </div>
      </div>
      <div class="col-aside">
        <div class="aside-card">
          <div class="aside-label">Glass Type</div>
          <div class="aside-value">Tempered Safety</div>
          <p>All balustrade panels are toughened tempered glass — the safety standard for balconies and staircases.</p>
        </div>
        <div class="aside-card">
          <div class="aside-label">Hardware</div>
          <div class="aside-value">Stainless Steel</div>
          <p>Grade stainless posts, top rail, and fittings — rust-resistant and low-maintenance.</p>
        </div>
        <div class="aside-card">
          <div class="aside-label">Pricing Note</div>
          <div class="aside-value">"Onwards"</div>
          <p>All prices shown are starting rates per linear foot. Final price depends on run length, glass panel count, and site conditions — confirmed after site measurement.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="faq-section">
    <div class="faq-inner">
      <div class="stag">Common Questions</div>
      <h2>Hand Railing FAQ</h2>
      <div class="faqs">
        <div class="faq reveal">
          <div class="faq-q">What does "onwards" mean in the pricing?</div>
          <div class="faq-a">The "onwards" price is a starting rate per linear foot for standard configurations. The final price depends on the total run length, number of glass panels, post spacing, and any custom requirements. We confirm the exact price after measuring on site — no surprises.</div>
        </div>
        <div class="faq reveal">
          <div class="faq-q">Can you install railing on an existing tiled staircase?</div>
          <div class="faq-a">Yes — hand railing is typically installed after the staircase tiling is complete. We fix posts through the tiled nosing or into the side wall/structure as appropriate. The installation method is confirmed on the site visit.</div>
        </div>
        <div class="faq reveal">
          <div class="faq-q">Is the hardware suitable for outdoor use?</div>
          <div class="faq-a">Yes — all stainless steel hardware used for balcony and terrace installations is selected for outdoor durability and resistance to Sri Lanka's humidity and salt air.</div>
        </div>
        <div class="faq reveal">
          <div class="faq-q">How long does installation take?</div>
          <div class="faq-a">Hand railing for a typical staircase or balcony run is usually a single-day installation. Fabrication time after measurement is typically 3–7 working days.</div>
        </div>
        <div class="faq reveal">
          <div class="faq-q">Do you also install shower cubicles?</div>
          <div class="faq-a">Yes — we install frameless and semi-frameless glass shower cubicles. See our <a href="/services/shower-cubicle">Shower Cubicle</a> page for configurations and pricing.</div>
        </div>
        <div class="faq reveal">
          <div class="faq-q">Can railing be combined with staircase tiling?</div>
          <div class="faq-a">Yes — we offer both services and can coordinate staircase tiling and railing installation as part of the same project. See our <a href="/services/staircase-tiling">Staircase Tiling</a> page for details.</div>
        </div>
      </div>
    </div>
  </section>

  <QuoteForm phone="94710111506" service="Hand Railing" />
  <CTA />
  <Footer />
</Layout>

<style>
  .page-hero {
    background: var(--charcoal);
    padding: 7rem 4rem 5.5rem;
    position: relative;
    overflow: hidden;
  }

  .page-hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background:
      repeating-linear-gradient(0deg, transparent, transparent 60px, rgba(255,255,255,.01) 60px, rgba(255,255,255,.01) 61px),
      repeating-linear-gradient(90deg, transparent, transparent 60px, rgba(255,255,255,.01) 60px, rgba(255,255,255,.01) 61px);
  }

  .hero-inner {
    position: relative;
    z-index: 1;
    max-width: 760px;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: .5rem;
    font-size: .75rem;
    color: rgba(245,240,232,.6);
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .breadcrumb a {
    color: rgba(245,240,232,.6);
    text-decoration: none;
    transition: color .2s;
  }

  .breadcrumb a:hover { color: var(--clay); }

  .hero-icon {
    width: 3.2rem;
    height: 3.2rem;
    margin-bottom: 1.4rem;
  }

  h1 {
    font-family: 'Playfair Display', serif;
    font-size: clamp(2.2rem, 4vw, 3.5rem);
    font-weight: 700;
    color: var(--cream);
    line-height: 1.1;
    letter-spacing: -.02em;
    margin-bottom: 1rem;
  }

  .hero-desc {
    font-size: .96rem;
    font-weight: 300;
    color: rgba(245,240,232,.7);
    line-height: 1.75;
    max-width: 58ch;
    margin-bottom: 1.8rem;
  }

  .hero-start {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 2.2rem;
    background: rgba(196,120,74,.07);
    border: 1px solid rgba(196,120,74,.2);
    padding: .9rem 1.4rem;
    border-radius: 3px;
    width: fit-content;
    flex-wrap: wrap;
  }

  .hs-item {
    display: flex;
    flex-direction: column;
    gap: .2rem;
  }

  .hs-label {
    font-size: .75rem;
    text-transform: uppercase;
    letter-spacing: .1em;
    color: rgba(245,240,232,.6);
  }

  .hs-price {
    font-family: 'Playfair Display', serif;
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--clay);
  }

  .hs-divider {
    width: 1px;
    height: 2.5rem;
    background: rgba(196,120,74,.2);
    flex-shrink: 0;
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    align-items: center;
  }

  /* ── Railing Section ── */

  .rail-section {
    background: var(--charcoal);
    padding: 5.5rem 4rem;
  }

  .rail-inner {
    max-width: 1200px;
    margin: 0 auto;
  }

  .rail-section .stag { color: var(--clay); }
  .rail-section h2 { color: var(--cream); }
  .rail-section .sdesc { color: rgba(245,240,232,.6); }

  .rail-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5px;
    background: rgba(255,255,255,.07);
    border: 1.5px solid rgba(255,255,255,.07);
    margin-top: .5rem;
  }

  .rail-card {
    background: #211c18;
    padding: 2.2rem;
    transition: background .25s;
  }

  .rail-card:hover { background: #28211a; }

  .rc-top {
    display: flex;
    gap: 1.2rem;
    align-items: flex-start;
    margin-bottom: 1rem;
  }

  .rc-icon {
    width: 3.5rem;
    height: 3.5rem;
    flex-shrink: 0;
  }

  .rc-name {
    font-family: 'Playfair Display', serif;
    font-size: 1.05rem;
    font-weight: 700;
    color: var(--cream);
    line-height: 1.25;
    margin-bottom: .3rem;
  }

  .rc-price {
    font-family: 'Playfair Display', serif;
    font-size: 1.15rem;
    font-weight: 700;
    color: var(--clay);
  }

  .rc-price span {
    font-family: 'DM Sans', sans-serif;
    font-size: .75rem;
    font-weight: 300;
    color: rgba(245,240,232,.3);
  }

  .rc-desc {
    font-size: .8rem;
    font-weight: 300;
    color: rgba(245,240,232,.6);
    line-height: 1.7;
    margin-bottom: 1rem;
  }

  .rc-list {
    list-style: none;
    margin-bottom: 1.4rem;
  }

  .rc-list li {
    font-size: .76rem;
    font-weight: 300;
    color: rgba(245,240,232,.6);
    padding: .35rem 0;
    border-bottom: 1px solid rgba(255,255,255,.05);
    display: flex;
    align-items: center;
    gap: .6rem;
  }

  .rc-list li::before {
    content: '✓';
    color: var(--clay);
    font-weight: 700;
    font-size: .8rem;
    flex-shrink: 0;
  }

  .rc-cta {
    display: inline-block;
    font-size: .76rem;
    font-weight: 500;
    color: var(--clay);
    text-decoration: none;
    border-bottom: 1px solid rgba(196,120,74,.3);
    padding-bottom: .1rem;
    transition: border-color .2s;
  }

  .rc-cta:hover { border-color: var(--clay); }

  /* ── Details Section ── */

  .details-section {
    background: var(--sand);
    padding: 5.5rem 4rem;
  }

  .section-inner {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 5rem;
    align-items: start;
    max-width: 1200px;
    margin: 0 auto;
  }

  .include-list {
    list-style: none;
    margin-bottom: 2rem;
  }

  .include-list li {
    display: flex;
    gap: 1rem;
    padding: .9rem 0;
    border-bottom: 1px solid rgba(196,120,74,.15);
  }

  .include-list li:last-child { border-bottom: none; }

  .check {
    color: var(--clay);
    font-weight: 700;
    font-size: .9rem;
    flex-shrink: 0;
    margin-top: .1rem;
  }

  .include-list strong {
    display: block;
    font-size: .84rem;
    font-weight: 500;
    color: var(--charcoal);
    margin-bottom: .2rem;
  }

  .include-list span {
    font-size: .78rem;
    color: var(--warm-gray);
    line-height: 1.6;
  }

  .not-included {
    font-size: .8rem;
    color: var(--warm-gray);
    padding: 1rem 1.2rem;
    background: rgba(196,120,74,.07);
    border-left: 3px solid var(--clay);
    border-radius: 0 3px 3px 0;
    line-height: 1.65;
  }

  .not-included strong { color: var(--charcoal); }

  .col-aside {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    position: sticky;
    top: 6rem;
  }

  .aside-card {
    background: rgba(255,255,255,.6);
    border: 1px solid rgba(196,120,74,.15);
    border-radius: 4px;
    padding: 1.4rem;
  }

  .aside-label {
    font-size: .75rem;
    text-transform: uppercase;
    letter-spacing: .13em;
    color: var(--warm-gray);
    margin-bottom: .4rem;
  }

  .aside-value {
    font-family: 'Playfair Display', serif;
    font-size: 1.3rem;
    font-weight: 700;
    color: var(--charcoal);
    margin-bottom: .5rem;
  }

  .aside-card p {
    font-size: .76rem;
    color: var(--warm-gray);
    line-height: 1.65;
  }

  /* ── FAQ Section ── */

  .faq-section {
    background: var(--off-white);
    padding: 5.5rem 4rem;
  }

  .faq-inner {
    max-width: 820px;
    margin: 0 auto;
  }

  .faqs {
    display: flex;
    flex-direction: column;
    gap: 0;
    margin-top: .5rem;
  }

  .faq {
    padding: 1.4rem 0;
    border-bottom: 1px solid var(--stone);
  }

  .faq:first-child { border-top: 1px solid var(--stone); }

  .faq-q {
    font-size: .9rem;
    font-weight: 600;
    color: var(--charcoal);
    margin-bottom: .55rem;
  }

  .faq-a {
    font-size: .82rem;
    font-weight: 300;
    color: var(--warm-gray);
    line-height: 1.75;
  }

  .faq-a a {
    color: var(--clay);
    text-decoration: none;
    border-bottom: 1px solid rgba(196,120,74,.3);
  }

  .faq-a a:hover { border-color: var(--clay); }

  /* ── Responsive ── */

  @media (max-width: 1100px) {
    .page-hero,
    .rail-section,
    .details-section,
    .faq-section {
      padding-left: 2.5rem;
      padding-right: 2.5rem;
    }

    .rail-grid { grid-template-columns: 1fr; }

    .section-inner {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .col-aside { position: static; }
  }

  @media (max-width: 768px) {
    .page-hero,
    .rail-section,
    .details-section,
    .faq-section {
      padding: 4rem 1.5rem;
    }

    .page-hero { padding-top: 6rem; }

    .hero-start { flex-direction: column; gap: .8rem; }
    .hs-divider { width: 3rem; height: 1px; }
  }
</style>
