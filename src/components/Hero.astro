<section class="hero" id="home">
  <div class="hero-left">
    <div class="eyebrow">Premium Tiling · Sri Lanka</div>
    <h1>Crafted<br /><em>Tile</em><br />Excellence</h1>
    <p class="hero-desc">
      From floor to finish — precision installation, premium materials, and
      artisan craftsmanship on every surface across Sri Lanka.
    </p>
    <div class="hero-btns">
      <a href="/contact" class="btn-primary">
        <svg width="15" height="15" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z" />
        </svg>
        Get a Free Quote
      </a>
      <a href="#services" class="btn-ghost">View Services →</a>
    </div>
    <div class="hero-stats">
      <div>
        <div class="stat-num">500+</div>
        <div class="stat-label">Projects Done</div>
      </div>
      <div>
        <div class="stat-num">5★</div>
        <div class="stat-label">Client Rating</div>
      </div>
      <div>
        <div class="stat-num">4×2</div>
        <div class="stat-label">Max Tile Size</div>
      </div>
    </div>
  </div>

  <div class="hero-right">
    <div class="mosaic">
      {Array.from({length: 48}, (_, i) => <div class="tc" style={`--i:${i}`}></div>)}
    </div>
    <div class="hero-badge">
      <div class="badge-label">Floor Tiling from</div>
      <div class="badge-value">Rs. 350</div>
      <div class="badge-sub">per sq.ft · up to 4×2</div>
    </div>
  </div>
</section>


<style>
  .hero {
    min-height: 100vh;
    display: grid;
    grid-template-columns: 1fr 1fr;
    padding-top: 4.5rem;
    overflow: hidden;
  }

  .hero-left {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 5rem 3rem 5rem 4rem;
  }

  .eyebrow {
    display: inline-flex;
    align-items: center;
    gap: .6rem;
    font-size: .75rem;
    font-weight: 500;
    letter-spacing: .16em;
    text-transform: uppercase;
    color: #894428; /* WCAG AA-compliant on off-white (6.75:1) */
    margin-bottom: 1.4rem;
    opacity: 0;
    animation: fadeUp .8s .2s forwards;
  }

  .eyebrow::before {
    content: '';
    display: block;
    width: 2rem;
    height: 1px;
    background: #894428;
  }

  h1 {
    font-family: 'Playfair Display', serif;
    font-size: clamp(2.6rem, 4.5vw, 5rem);
    font-weight: 900;
    line-height: 1.04;
    letter-spacing: -.025em;
    color: var(--charcoal);
    margin-bottom: 1.3rem;
    opacity: 0;
    animation: fadeUp .9s .35s forwards;
  }

  h1 em {
    font-style: italic;
    color: var(--clay);
  }

  .hero-desc {
    font-size: .97rem;
    font-weight: 300;
    line-height: 1.82;
    color: var(--warm-gray);
    max-width: 44ch;
    margin-bottom: 2.6rem;
    opacity: 0;
    animation: fadeUp .9s .55s forwards;
  }

  .hero-btns {
    display: flex;
    gap: 1rem;
    align-items: center;
    opacity: 0;
    animation: fadeUp .9s .75s forwards;
  }

  .hero-stats {
    display: flex;
    gap: 2.5rem;
    margin-top: 3.2rem;
    padding-top: 2rem;
    border-top: 1px solid var(--stone);
    opacity: 0;
    animation: fadeUp .9s .95s forwards;
  }

  .stat-num {
    font-family: 'Playfair Display', serif;
    font-size: 2rem;
    font-weight: 700;
    color: var(--charcoal);
    line-height: 1;
  }

  .stat-label {
    font-size: .75rem;
    font-weight: 400;
    color: var(--warm-gray);
    margin-top: .3rem;
    text-transform: uppercase;
    letter-spacing: .08em;
  }

  /* ── Right panel: mosaic ── */

  .hero-right {
    position: relative;
    overflow: hidden;
    background: var(--charcoal);
  }

  .mosaic {
    position: absolute;
    inset: 0;
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    grid-template-rows: repeat(8, 1fr);
    gap: 3px;
    padding: 3px;
    opacity: 0;
    animation: fadeIn 0.7s .2s forwards;
  }

  /* Tiles are rendered server-side; use :global() to bypass Astro scoping */
  :global(.tc) {
    background: #2a2420;
    animation: tR 0.5s calc(.02s * var(--i)) backwards;
  }

  :global(.tc:nth-child(3n))  { background: #24201c; }
  :global(.tc:nth-child(5n))  { background: #2f2620; }
  :global(.tc:nth-child(7n))  { background: #382e26; }
  :global(.tc:nth-child(11n)) { background: #3d342c; }

  /* ── Hero badge ── */

  .hero-badge {
    position: absolute;
    bottom: 2.5rem;
    left: 2.5rem;
    background: var(--charcoal);
    border: 1px solid var(--clay);
    color: var(--cream);
    padding: 1.3rem 1.8rem;
    border-radius: 3px;
    z-index: 5;
    opacity: 0;
    animation: fadeUp .9s 1.2s forwards;
  }

  .badge-label {
    font-size: .75rem;
    text-transform: uppercase;
    letter-spacing: .12em;
    color: rgba(245, 240, 232, .7);
    margin-bottom: .3rem;
  }

  .badge-value {
    font-family: 'Playfair Display', serif;
    font-size: 1.7rem;
    font-weight: 700;
    color: var(--clay);
    line-height: 1;
  }

  .badge-sub {
    font-size: .75rem;
    color: rgba(245, 240, 232, .6);
    margin-top: .2rem;
  }

  /* ── Responsive ── */

  @media (max-width: 1100px) {
    .hero-left {
      padding: 5rem 2rem 4rem 2.5rem;
    }
  }

  @media (max-width: 768px) {
    .hero {
      grid-template-columns: 1fr;
    }

    .hero-right {
      height: 50vw;
    }

    h1 {
      font-size: 2.3rem;
    }

    .hero-stats {
      gap: 1.5rem;
      flex-wrap: wrap;
    }
  }
</style>
