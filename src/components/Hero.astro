          <path d="M12 0C5.373 0 0 5.373 0 12c0 2.143.566 4.148 1.553 5.887L0 24l6.296-1.529A11.946 11.946 0 0012 24c6.627 0 12-5.373 12-12S18.627 0 12 0zm0 21.818a9.818 9.818 0 01-5.001-1.368l-.36-.213-3.733.906.946-3.643-.234-.374A9.818 9.818 0 1112 21.818z" />
        </svg>
        WhatsApp Quote
      </a>
      <a href="#services" class="btn-ghost">View Services →</a>
    </div>
    <div class="hero-stats">
      <div>
        <div class="stat-num">500+</div>
        <div class="stat-label">Projects Done</div>
      </div>
      <div>
        <div class="stat-num">5★</div>
        <div class="stat-label">Client Rating</div>
      </div>
      <div>
        <div class="stat-num">4×2</div>
        <div class="stat-label">Max Tile Size</div>
      </div>
    </div>
  </div>

  <div class="hero-right">
    <div class="mosaic" id="mosaic"></div>
    <div class="hero-badge">
      <div class="badge-label">Floor Tiling from</div>
      <div class="badge-value">Rs. 350</div>
      <div class="badge-sub">per sq.ft · up to 4×2</div>
    </div>
  </div>
</section>

<!-- Generate mosaic tiles dynamically -->
<script>
  const mosaic = document.getElementById('mosaic');
  for (let i = 0; i < 48; i++) {
    const tile = document.createElement('div');
    tile.className = 'tc';
    tile.style.setProperty('--i', String(i));
    mosaic.appendChild(tile);
  }
</script>

<style>
  .hero {
    min-height: 100vh;
    display: grid;
    grid-template-columns: 1fr 1fr;
    padding-top: 4.5rem;
    overflow: hidden;
  }

  .hero-left {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 5rem 3rem 5rem 4rem;
  }

  .eyebrow {
    display: inline-flex;
    align-items: center;
    gap: .6rem;
    font-size: .68rem;
    font-weight: 500;
    letter-spacing: .16em;
    text-transform: uppercase;
    color: var(--clay);
    margin-bottom: 1.4rem;
    opacity: 0;
    animation: fadeUp .8s .2s forwards;
  }

  .eyebrow::before {
    content: '';
    display: block;
    width: 2rem;
    height: 1px;
    background: var(--clay);
  }

  h1 {
    font-family: 'Playfair Display', serif;
    font-size: clamp(2.6rem, 4.5vw, 5rem);
    font-weight: 900;
    line-height: 1.04;
    letter-spacing: -.025em;
    color: var(--charcoal);
    margin-bottom: 1.3rem;
    opacity: 0;
    animation: fadeUp .9s .35s forwards;
  }

  h1 em {
    font-style: italic;
    color: var(--clay);
  }

  .hero-desc {
    font-size: .97rem;
    font-weight: 300;
    line-height: 1.82;
    color: var(--warm-gray);
    max-width: 44ch;
    margin-bottom: 2.6rem;
    opacity: 0;
    animation: fadeUp .9s .55s forwards;
  }

  .hero-btns {
    display: flex;
    gap: 1rem;
    align-items: center;
    opacity: 0;
    animation: fadeUp .9s .75s forwards;
  }

  .hero-stats {
    display: flex;
    gap: 2.5rem;
    margin-top: 3.2rem;
    padding-top: 2rem;
    border-top: 1px solid var(--stone);
    opacity: 0;
    animation: fadeUp .9s .95s forwards;
  }

  .stat-num {
    font-family: 'Playfair Display', serif;
    font-size: 2rem;
    font-weight: 700;
    color: var(--charcoal);
    line-height: 1;
  }

  .stat-label {
    font-size: .68rem;
    font-weight: 400;
    color: var(--warm-gray);
    margin-top: .3rem;
    text-transform: uppercase;
    letter-spacing: .08em;
  }

  /* ── Right panel: mosaic ── */

  .hero-right {
    position: relative;
    overflow: hidden;
    background: var(--charcoal);
  }

  .mosaic {
    position: absolute;
    inset: 0;
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    grid-template-rows: repeat(8, 1fr);
    gap: 3px;
    padding: 3px;
    opacity: 0;
    animation: fadeIn 1.2s .5s forwards;
  }

  /* Mosaic tiles are injected by JS, so use :global() to bypass scoping */
  :global(.tc) {
    background: #2a2420;
    animation: tR 1.5s calc(.05s * var(--i)) backwards;
  }

  :global(.tc:nth-child(3n))  { background: #24201c; }
  :global(.tc:nth-child(5n))  { background: #2f2620; }
  :global(.tc:nth-child(7n))  { background: #382e26; }
  :global(.tc:nth-child(11n)) { background: #3d342c; }

  /* ── Hero badge ── */

  .hero-badge {
    position: absolute;
    bottom: 2.5rem;
    left: 2.5rem;
    background: var(--clay);
    color: var(--cream);
    padding: 1.3rem 1.8rem;
    border-radius: 3px;
    z-index: 5;
    opacity: 0;
    animation: fadeUp .9s 1.2s forwards;
  }

  .badge-label {
    font-size: .65rem;
    text-transform: uppercase;
    letter-spacing: .12em;
    opacity: .8;
    margin-bottom: .3rem;
  }

  .badge-value {
    font-family: 'Playfair Display', serif;
    font-size: 1.7rem;
    font-weight: 700;
    line-height: 1;
  }

  .badge-sub {
    font-size: .68rem;
    opacity: .75;
    margin-top: .2rem;
  }

  /* ── Responsive ── */

  @media (max-width: 1100px) {
    .hero-left {
      padding: 5rem 2rem 4rem 2.5rem;
    }
  }

  @media (max-width: 768px) {
    .hero {
      grid-template-columns: 1fr;
    }

    .hero-right {
      height: 50vw;
    }

    h1 {
      font-size: 2.3rem;
    }

    .hero-stats {
      gap: 1.5rem;
      flex-wrap: wrap;
    }
  }
</style>
