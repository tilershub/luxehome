</section>

<style>
  section {
    background: var(--charcoal);
    padding: 5.5rem 4rem;
    position: relative;
    overflow: hidden;
  }

  /* Subtle grid overlay */
  section::before {
    content: '';
    position: absolute;
    inset: 0;
    background:
      repeating-linear-gradient(
        0deg,
        transparent,
        transparent 60px,
        rgba(255, 255, 255, .01) 60px,
        rgba(255, 255, 255, .01) 61px
      ),
      repeating-linear-gradient(
        90deg,
        transparent,
        transparent 60px,
        rgba(255, 255, 255, .01) 60px,
        rgba(255, 255, 255, .01) 61px
      );
  }

  /* Override shared text colours for dark background */
  h2 {
    color: var(--cream);
  }

  .sdesc {
    color: rgba(245, 240, 232, .45);
  }

  /* ── Service grid ── */

  .svc-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5px;
    background: rgba(255, 255, 255, .07);
    border: 1.5px solid rgba(255, 255, 255, .07);
    position: relative;
    z-index: 1;
  }

  .sc {
    background: #211c18;
    padding: 2.2rem;
    position: relative;
    overflow: hidden;
    transition: background .3s;
  }

  .sc:hover {
    background: #28211a;
  }

  .sc::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--clay);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform .38s;
  }

  .sc:hover::after {
    transform: scaleX(1);
  }

  .sc.wide {
    grid-column: span 2;
  }

  .sc.full {
    grid-column: span 3;
  }

  /* ── Glass Work price layout ── */

  .glass-prices {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    margin-top: .8rem;
    margin-bottom: .6rem;
  }

  .glass-group-label {
    font-size: .62rem;
    text-transform: uppercase;
    letter-spacing: .12em;
    color: var(--clay);
    margin-bottom: .6rem;
    font-weight: 500;
  }

  .glass-rows {
    display: flex;
    flex-direction: column;
    gap: .4rem;
  }

  .glass-row {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: 1rem;
    padding: .45rem 0;
    border-bottom: 1px solid rgba(255,255,255,.05);
  }

  .glass-row:last-child { border-bottom: none; }

  .glass-type {
    font-size: .76rem;
    color: rgba(245,240,232,.5);
    font-weight: 300;
  }

  .glass-amt {
    font-family: 'Playfair Display', serif;
    font-size: .88rem;
    font-weight: 700;
    color: var(--clay);
    white-space: nowrap;
  }

  .si {
    width: 2.6rem;
    height: 2.6rem;
    margin-bottom: 1.2rem;
  }

  .svc-name {
    font-family: 'Playfair Display', serif;
    font-size: 1.15rem;
    font-weight: 700;
    color: var(--cream);
    margin-bottom: .4rem;
    line-height: 1.2;
  }

  .svc-desc {
    font-size: .8rem;
    font-weight: 300;
    color: rgba(245, 240, 232, .4);
    line-height: 1.7;
    margin-bottom: 1.2rem;
  }

  .price-row {
    display: flex;
    align-items: baseline;
    gap: .4rem;
    margin-top: .32rem;
  }

  .price-amt {
    font-family: 'Playfair Display', serif;
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--clay);
  }

  .price-unit {
    font-size: .68rem;
    color: rgba(245, 240, 232, .3);
  }

  .badge {
    display: inline-block;
    background: rgba(196, 120, 74, .1);
    border: 1px solid rgba(196, 120, 74, .24);
    color: var(--clay);
    font-size: .65rem;
    font-weight: 500;
    letter-spacing: .05em;
    padding: .18rem .6rem;
    border-radius: 20px;
    margin-top: .6rem;
  }

  .svc-link {
    display: inline-block;
    margin-top: 1rem;
    font-size: .72rem;
    font-weight: 500;
    letter-spacing: .06em;
    color: var(--clay);
    text-decoration: none;
    border-bottom: 1px solid rgba(196, 120, 74, .3);
    padding-bottom: .1rem;
    transition: border-color .2s, color .2s;
  }

  .svc-link:hover {
    color: #e08c5a;
    border-color: #e08c5a;
  }

  /* ── Responsive ── */

  @media (max-width: 1100px) {
    section {
      padding-left: 2.5rem;
      padding-right: 2.5rem;
    }

    .svc-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .sc.wide {
      grid-column: span 2;
    }

    .sc.full {
      grid-column: span 2;
    }

    .glass-prices {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    section {
      padding: 4rem 1.5rem;
    }

    .svc-grid {
      grid-template-columns: 1fr;
    }

    .sc.wide,
    .sc.full {
      grid-column: span 1;
    }

    .glass-prices {
      grid-template-columns: 1fr;
    }
  }
</style>
