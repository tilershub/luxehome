<style>
  section {
    background: var(--charcoal);
    padding: 5.5rem 4rem;
    position: relative;
    overflow: hidden;
  }

  section::before {
    content: '';
    position: absolute;
    inset: 0;
    background:
      repeating-linear-gradient(
        0deg,
        transparent,
        transparent 60px,
        rgba(255, 255, 255, .01) 60px,
        rgba(255, 255, 255, .01) 61px
      ),
      repeating-linear-gradient(
        90deg,
        transparent,
        transparent 60px,
        rgba(255, 255, 255, .01) 60px,
        rgba(255, 255, 255, .01) 61px
      );
  }

  h2 { color: var(--cream); }

  .sdesc { color: rgba(245, 240, 232, .45); }

  /* ── Service grid ── */

  .svc-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5px;
    background: rgba(255, 255, 255, .07);
    border: 1.5px solid rgba(255, 255, 255, .07);
    position: relative;
    z-index: 1;
  }

  .sc {
    background: #211c18;
    padding: 2rem;
    text-decoration: none;
    display: flex;
    flex-direction: column;
    gap: .5rem;
    position: relative;
    overflow: hidden;
    transition: background .25s;
  }

  .sc:hover { background: #28211a; }

  .sc::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--clay);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform .35s;
  }

  .sc:hover::after { transform: scaleX(1); }

  .si {
    width: 2.2rem;
    height: 2.2rem;
    margin-bottom: .6rem;
    flex-shrink: 0;
  }

  .svc-name {
    font-family: 'Playfair Display', serif;
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--cream);
    line-height: 1.2;
  }

  .svc-tag {
    font-size: .72rem;
    font-weight: 300;
    color: rgba(245, 240, 232, .35);
    line-height: 1.55;
  }

  .svc-price {
    font-size: .8rem;
    color: rgba(245, 240, 232, .4);
    margin-top: auto;
    padding-top: 1rem;
  }

  .svc-price strong {
    font-family: 'Playfair Display', serif;
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--clay);
  }

  .svc-link {
    display: inline-block;
    font-size: .7rem;
    font-weight: 500;
    letter-spacing: .05em;
    color: var(--clay);
    border-bottom: 1px solid rgba(196, 120, 74, .3);
    padding-bottom: .1rem;
    width: fit-content;
    transition: border-color .2s, color .2s;
    margin-top: .3rem;
  }

  .sc:hover .svc-link {
    border-color: var(--clay);
    color: #e08c5a;
  }

  .sc.wide { grid-column: span 3; }

  /* ── Responsive ── */

  @media (max-width: 1100px) {
    section { padding-left: 2.5rem; padding-right: 2.5rem; }
    .svc-grid { grid-template-columns: repeat(2, 1fr); }
    .sc.wide { grid-column: span 2; }
  }

  @media (max-width: 768px) {
    section { padding: 4rem 1.5rem; }
    .svc-grid { grid-template-columns: 1fr; }
    .sc.wide { grid-column: span 1; }
  }
</style>
