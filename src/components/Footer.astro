<style>
  footer {
    background: var(--charcoal);
    padding: 4rem 4rem 2.5rem;
    color: rgba(245, 240, 232, .6);
  }

  .footer-top {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1fr;
    gap: 3.5rem;
    padding-bottom: 2.8rem;
    border-bottom: 1px solid rgba(255, 255, 255, .07);
    margin-bottom: 2rem;
  }

  .col-brand p {
    font-size: .8rem;
    line-height: 1.72;
    margin-top: .9rem;
    max-width: 36ch;
  }

  .social-row {
    display: flex;
    gap: .65rem;
    margin-top: 1.4rem;
  }

  .social-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.1rem;
    height: 2.1rem;
    border-radius: 4px;
    background: rgba(245, 240, 232, .08);
    border: 1px solid rgba(245, 240, 232, .1);
    transition: background .2s, border-color .2s, transform .2s;
    text-decoration: none;
  }

  .social-btn:hover {
    background: var(--clay);
    border-color: var(--clay);
    transform: translateY(-2px);
  }

  .social-btn svg {
    width: 1rem;
    height: 1rem;
    fill: rgba(245, 240, 232, .7);
    transition: fill .2s;
  }

  .social-btn:hover svg {
    fill: var(--cream);
  }

  .col-links h3 {
    font-size: .75rem;
    font-family: 'DM Sans', sans-serif;
    text-transform: uppercase;
    letter-spacing: .14em;
    color: rgba(245, 240, 232, .7);
    font-weight: 500;
    margin-bottom: 1rem;
  }

  .col-links ul {
    list-style: none;
  }

  .col-links li {
    margin-bottom: .25rem;
  }

  .col-links a {
    display: block;
    padding: .35rem 0;
    text-decoration: none;
    color: rgba(245, 240, 232, .6);
    font-size: .8rem;
    transition: color .2s;
  }

  .col-links a:hover {
    color: var(--clay);
  }

  .footer-bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: .75rem;
  }

  /* ── Floating WhatsApp button ── */

  .wa-float {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    z-index: 1000;
    width: 3.3rem;
    height: 3.3rem;
    background: #25d366;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 20px rgba(37, 211, 102, .4);
    transition: transform .2s, box-shadow .2s;
    text-decoration: none;
  }

  .wa-float:hover {
    transform: scale(1.1) translateY(-3px);
    box-shadow: 0 8px 28px rgba(37, 211, 102, .5);
  }

  .wa-float svg {
    width: 1.65rem;
    height: 1.65rem;
    fill: white;
  }

  /* ── Responsive ── */

  @media (max-width: 1100px) {
    footer {
      padding-left: 2.5rem;
      padding-right: 2.5rem;
    }

    .footer-top {
      grid-template-columns: 1fr 1fr;
      gap: 2.5rem;
    }
  }

  @media (max-width: 768px) {
    footer {
      padding: 4rem 1.5rem;
    }

    .footer-top {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-bottom {
      flex-direction: column;
      gap: .8rem;
      text-align: center;
    }
  }
</style>
