<style>
  section {
    background: var(--sand);
    padding: 5.5rem 4rem;
  }

  .bath-inner {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 4.5rem;
    align-items: start;
  }

  /* ‚îÄ‚îÄ Pricing card ‚îÄ‚îÄ */

  .bcard {
    background: var(--charcoal);
    padding: 2.2rem;
    border-radius: 4px;
    position: sticky;
    top: 7rem;
  }

  .bcard-label {
    font-size: .65rem;
    text-transform: uppercase;
    letter-spacing: .12em;
    color: rgba(245, 240, 232, .4);
    margin-bottom: .6rem;
  }

  .bcard-price {
    font-family: 'Playfair Display', serif;
    font-size: 2.7rem;
    font-weight: 900;
    color: var(--clay);
    line-height: 1;
  }

  .bcard-unit {
    font-size: .78rem;
    color: rgba(245, 240, 232, .4);
    margin-top: .35rem;
    margin-bottom: 1.4rem;
  }

  .bcard-note {
    font-size: .78rem;
    color: rgba(245, 240, 232, .5);
    line-height: 1.65;
    padding: .9rem;
    background: rgba(255, 255, 255, .04);
    border-radius: 3px;
    margin-bottom: 1.3rem;
  }

  .bcard-cta {
    display: block;
    width: 100%;
    text-align: center;
    background: var(--clay);
    color: var(--cream);
    text-decoration: none;
    padding: .9rem;
    border-radius: 2px;
    font-size: .86rem;
    font-weight: 500;
    transition: background .2s;
  }

  .bcard-cta:hover {
    background: var(--terracotta);
  }

  /* ‚îÄ‚îÄ Scope grid ‚îÄ‚îÄ */

  .scope-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: .85rem;
  }

  .scope-item {
    display: flex;
    flex-direction: column;
    gap: .28rem;
    padding: 1.25rem;
    background: rgba(255, 255, 255, .5);
    border-radius: 3px;
    border-top: 2px solid var(--stone);
    transition: border-color .2s;
  }

  .scope-item:hover {
    border-color: var(--clay);
  }

  .scope-icon {
    font-size: 1.2rem;
    margin-bottom: .08rem;
  }

  .scope-name {
    font-size: .82rem;
    font-weight: 500;
    color: var(--charcoal);
  }

  .scope-sub {
    font-size: .72rem;
    color: var(--warm-gray);
  }

  /* ‚îÄ‚îÄ Responsive ‚îÄ‚îÄ */

  @media (max-width: 1100px) {
    section {
      padding-left: 2.5rem;
      padding-right: 2.5rem;
    }

    .bath-inner {
      grid-template-columns: 1fr;
    }

    .bcard {
      position: static;
    }
  }

  @media (max-width: 768px) {
    section {
      padding: 4rem 1.5rem;
    }

    .scope-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
